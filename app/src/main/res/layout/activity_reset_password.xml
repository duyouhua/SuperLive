<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/chat_activity_bg"
    tools:context="com.joytouch.superlive.activity.ResetPasswordActivity">
    <include
        android:id="@+id/title"
        layout="@layout/titlebar"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="8dp">
        <RelativeLayout
            android:id="@+id/rl_pass1"
            android:layout_width="match_parent"
            android:layout_height="55dp">
            <TextView
                android:id="@+id/tv_pass1"
               style="@style/Mine_item_text_style"
                android:layout_width="70dp"
                android:text="当前密码"/>
            <EditText
                android:id="@+id/et_pass1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/tv_pass1"
                android:layout_marginLeft="8dp"
                android:background="@null"
                android:inputType="textPassword"
                android:singleLine="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_pass2"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@id/rl_pass1">
            <TextView
                android:id="@+id/tv_pass2"
                style="@style/Mine_item_text_style"
                android:layout_width="70dp"
                android:text="新密码"/>
            <EditText
                android:id="@+id/et_pass2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/tv_pass2"
                android:layout_marginLeft="8dp"
                android:background="@null"
                android:inputType="textPassword"
                android:singleLine="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_pass3"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@id/rl_pass2">
            <TextView
                android:id="@+id/tv_pass3"
                style="@style/Mine_item_text_style"
                android:layout_width="70dp"
                android:text="确认密码"/>
            <EditText
                android:id="@+id/et_pass3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/tv_pass3"
                android:layout_marginLeft="8dp"
                android:background="@null"
                android:inputType="textPassword"
                android:singleLine="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">
        <ImageView
            android:id="@+id/iv_error"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:background="@drawable/send_error"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tv_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前用户名或密码错误"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:textColor="@color/bg_red"
            android:layout_toRightOf="@id/iv_error"
            android:layout_marginLeft="4dp"
            android:visibility="gone"/>
    </RelativeLayout>
</LinearLayout>
