<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="290dp"
        android:layout_height="400dp"
        android:layout_centerInParent="true"
        android:background="@drawable/lottery_red_back">
        <ImageView
            android:id="@+id/iv_finish"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/red_finish"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"/>
        <com.joytouch.superlive.widget.CircleImageView
            android:id="@+id/iv_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"/>
        <RelativeLayout
            android:id="@+id/rl_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="的竞猜红包"
                android:textColor="@color/white"
                android:textSize="15sp"/>
            <ImageView
                android:id="@+id/iv_pin"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_centerVertical="true"
                android:background="@drawable/pin"
                android:layout_toRightOf="@id/tv_name"
                android:layout_marginLeft="6dp"
                android:visibility="gone"/>
        </RelativeLayout>
       
        <RelativeLayout
            android:id="@+id/rl_white"
            android:layout_width="250dp"
            android:layout_height="234dp"
            android:background="@drawable/red_white"
            android:layout_below="@id/rl_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="48dp">
            <RelativeLayout
                android:id="@+id/rl_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                tools:visibility="visible">
                <TextView
                    android:id="@+id/tv_subject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22分钟的时候双方ADC的补刀会不会都达到200刀以上"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textSize="14sp"
                    android:textColor="@color/textcolor_1"
                    android:lineSpacingExtra="4dp"
                    android:layout_centerHorizontal="true"/>
                <RelativeLayout
                    android:id="@+id/rl_answer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_subject"
                    android:layout_marginTop="45dp">
                    <Button
                        android:id="@+id/but_left"
                        android:layout_width="80dp"
                        android:layout_height="35dp"
                        android:background="@drawable/red_lottery_selecter_bg"
                        android:text="会"
                        android:textColor="#AD771C"
                        android:layout_marginLeft="30dp"/>
                    <Button
                        android:id="@+id/but_right"
                        android:layout_width="80dp"
                        android:layout_height="35dp"
                        android:background="@drawable/red_lottery_selecter_bg"
                        android:text="会"
                        android:textColor="#AD771C"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="30dp"/>
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*猜中后可随机获得金币奖励"
                    android:textColor="@color/textcolor_2"
                    android:textSize="12sp"
                    android:layout_below="@id/rl_answer"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_win"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/colors"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"/>
                <TextView
                    android:id="@+id/tv_gold_win"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="恭喜您获得30金币"
                    android:textSize="20sp"
                    android:textColor="#AD771C"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"/>
                <TextView
                    android:id="@+id/tv_red_num"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:layout_below="@id/tv_gold_win"
                    android:layout_marginTop="15dp"
                    android:background="#EAEAEA"
                    android:text="已抢走4个红包，共300金币"
                    android:gravity="center_vertical"
                    android:textSize="10sp"
                    android:textColor="@color/textcolor_2"
                    android:layout_marginLeft="6dp"
                    android:paddingLeft="10dp"
                    android:layout_marginRight="6dp"/>
                <ListView
                    android:id="@+id/listView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:scrollbars="none"
                    android:divider="@null"
                    android:layout_below="@id/tv_red_num">
                </ListView>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_wrong"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                tools:visibility="gone">
                <TextView
                    android:id="@+id/tv_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="很遗憾您答错了"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="33dp"
                    android:textColor="#AD771C"
                    android:textSize="20sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="继续努力吧～"
                    android:textSize="10sp"
                    android:textColor="@color/textcolor_2"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/tv_result"
                    android:layout_marginTop="12dp"/>
                <ImageView
                    android:id="@+id/iv_guaishou"
                    android:layout_width="125dp"
                    android:layout_height="84dp"
                    android:background="@drawable/monster"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/tv_result"
                    android:layout_marginTop="66dp"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>