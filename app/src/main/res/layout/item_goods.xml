<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:descendantFocusability="blocksDescendants"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/v4_logo_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true">
            <ImageView
                android:id="@+id/v4_goods_logo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitCenter"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/v4_logo_back"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:text="空间哦哦"
                    android:id="@+id/v4_goods_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textcolor_1"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/v4_goods_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textcolor_1"
                    android:layout_marginLeft="10dp"
                    android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_expre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/reward0"/>

                <TextView
                    android:text="1000"
                    android:id="@+id/v4_goods_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_yellow"
                    android:textSize="12sp"/>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/ll_ball_qiu"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@drawable/ballgoldlogo"/>

                    <TextView
                        android:text=""
                        android:id="@+id/v4_goods_qiu_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_yellow"
                        android:textSize="12sp"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <Button
            android:textColor="@color/textcolor_1"
            android:id="@+id/v4_shop_buy"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:textSize="10sp"
            android:layout_centerVertical="true"
            android:text="购买"
            android:background="@drawable/shop_buy_bac"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/v4_view_0.5"
        android:background="#E6E6E6"/>
</LinearLayout>