<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/match_num"
        android:layout_width="match_parent"
        android:layout_marginBottom="7dp"
        android:layout_height="48dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingRight="19dp"
        android:paddingLeft="19dp"
        android:clickable="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/match_bg">

        <RelativeLayout
            android:id="@+id/bss"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:paddingRight="18dp"
            android:paddingLeft="18dp"
            android:background="#75000000">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/redname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8sp"
                android:textColor="@color/withe"
                android:singleLine="true"
                android:maxLength="6"
                android:ellipsize="end"
                android:text=""/>
                <TextView
                    android:id="@+id/red_tv_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8sp"
                    android:textColor="@color/withe"
                    android:layout_marginLeft="4dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/blue_tv_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8sp"
                    android:textColor="@color/withe"
                    android:layout_marginRight="4dp"/>
                <TextView
                    android:id="@+id/bluename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8sp"
                    android:textColor="@color/withe"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="11dp"
                android:orientation="horizontal"
                android:gravity="bottom"
                android:layout_alignParentBottom="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="11dp"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:layout_marginRight="36dp"
                    android:background="@drawable/balck_left"
                    android:orientation="horizontal">
                <TextView
                    android:id="@+id/red_count"
                    android:layout_width="match_parent"
                    android:layout_height="11dp"
                    android:textColor="@color/withe"
                    android:textSize="8sp"
                    android:paddingLeft="8dp"
                    android:background="@drawable/redcount"
                    android:text=""/>
                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="11dp"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:orientation="horizontal"
                android:background="@drawable/blacke_right"
                android:layout_marginLeft="36dp">
                <TextView
                    android:id="@+id/blue_count"
                    android:layout_width="88dp"
                    android:layout_height="11dp"
                    android:textColor="@color/withe"
                    android:textSize="8sp"
                    android:paddingRight="8dp"
                    android:gravity="right|center_vertical"
                    android:background="@drawable/blue_count"
                    android:text=""/>
            </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <ImageView
            android:id="@+id/red_praise"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/red_praise_selector"/>
        <ImageView
            android:id="@+id/blue_praise"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/blue_praise_selector"/>
        <LinearLayout
            android:id="@+id/update_num"
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="6dp"
            android:background="@drawable/match_num_bg">
            <TextView
                android:id="@+id/red_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12sp"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_marginRight="4dp"
                android:textColor="@color/withe"/>
            <ImageView
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:background="@drawable/vs"/>
            <TextView
                android:id="@+id/blue_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12sp"
                android:layout_weight="1"

                android:layout_marginLeft="4dp"
                android:textColor="@color/withe"/>
        </LinearLayout>

    </RelativeLayout>
        <TextView
            android:id="@+id/match_state"
            android:layout_width="63dp"
            android:layout_height="15dp"
            android:textColor="@color/withe"
            android:textSize="7.5sp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:background="@drawable/retangle_black_40"/>
    </RelativeLayout>
</LinearLayout>