<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="bottom"
    android:layout_height="wrap_content">
<LinearLayout
    android:id="@+id/bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:paddingLeft="20dp"
        android:paddingRight="15dp"
        android:background="@color/withe">
        <ImageView
            android:id="@+id/gold_logo"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_centerVertical="true"
            android:src="@drawable/reward0"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_toRightOf="@id/gold_logo"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textColor="@color/textcolor_1"
            android:text="金币支付"/>
        <RadioButton
            android:id="@+id/gold_price_selector"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:button="@null"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/radiobt_selector"/>
        <TextView
            android:id="@+id/gold_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textColor="@color/textcolor_1"
            android:layout_toLeftOf="@id/gold_price_selector"
            android:layout_marginRight="15dp"
            android:text=""/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/view"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:paddingLeft="20dp"
        android:paddingRight="15dp"
        android:background="@color/withe">
        <ImageView
            android:id="@+id/ball_logo"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ballgoldlogo"/>
        <TextView
            android:id="@+id/pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_toRightOf="@id/ball_logo"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textColor="@color/textcolor_1"
            android:text="球票支付"/>

        <RadioButton
            android:id="@+id/ballgold_price_selector"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:button="@null"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/radiobt_selector"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:gravity="right"
            android:layout_toLeftOf="@id/ballgold_price_selector"
            >
            <TextView
                android:id="@+id/ballgold_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/textcolor_1"
                android:text=""/>
            <TextView
                android:id="@+id/activity_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/textcolor_1"
                android:text=""/>

        </LinearLayout>

        <TextView
            android:id="@+id/activity_logo"
            android:layout_width="31dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/pay"
            android:layout_marginLeft="5dp"
            android:text="活动"
            android:textSize="10sp"
            android:gravity="center"
            android:textColor="@color/withe"
            android:background="@drawable/retangle_red"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/view"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/withe"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/ok"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:textColor="@color/textcolor_1"
            android:textSize="15sp"
            android:gravity="center"
            android:background="@color/withe"
            android:text="确定"/>
        <TextView
            android:id="@+id/cancle"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:textColor="@color/textcolor_1"
            android:textSize="15sp"
            android:gravity="center"
            android:background="@color/withe"
            android:text="取消"/>
    </LinearLayout>
</LinearLayout>
</LinearLayout>