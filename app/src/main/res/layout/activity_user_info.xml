<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root_my"
    android:orientation="vertical"
    android:background="@color/main_bg"
    tools:context="com.joytouch.superlive.activity.UserInfoActivity">
    <include
        android:id="@+id/title"
        layout="@layout/titlebar"/>
    <RelativeLayout
        android:id="@+id/rl_icon"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/titlebar_color"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/tv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="头像"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:textSize="16sp"
            android:textColor="@color/textcolor_1"/>
        <ImageView
            android:id="@+id/iv_goon_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/goon"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"/>
        <com.joytouch.superlive.widget.CircleImageView
            android:id="@+id/iv_icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iv_goon_icon"
            android:layout_marginRight="8dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_nick"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/titlebar_color"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:textSize="16sp"
            android:textColor="@color/textcolor_1"/>
        <ImageView
            android:id="@+id/iv_goon_nickname"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/goon"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"/>
        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/iv_goon_nickname"
            android:text="wenwen"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:textColor="@color/textcolor_2"
            android:textSize="16sp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/attention_item_line_color"/>
    <RelativeLayout
        android:id="@+id/rl_sign"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/titlebar_color">
        <TextView
            android:id="@+id/rrr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个性签名"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:textSize="16sp"
            android:textColor="@color/textcolor_1"/>
        <ImageView
            android:id="@+id/iv_goon_sign"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/goon"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"/>
        <TextView
            android:gravity="right"
            android:layout_marginLeft="8dp"
            android:singleLine="true"
            android:layout_toRightOf="@+id/rrr"
            android:id="@+id/tv_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/iv_goon_sign"
            android:text="40469"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:textColor="@color/textcolor_2"
            android:textSize="16sp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/attention_item_line_color"/>
    <RelativeLayout
        android:id="@+id/rl_pass"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/titlebar_color">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改密码"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:textSize="16sp"
            android:textColor="@color/textcolor_1"/>
        <ImageView
            android:id="@+id/iv_goon_pass"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/goon"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/attention_item_line_color"/>
    <RelativeLayout
        android:id="@+id/rl_level"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/titlebar_color">
        <TextView
            android:text="等级"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:textSize="16sp"
            android:textColor="@color/textcolor_1"/>
        <LinearLayout
            android:layout_toLeftOf="@+id/jiantou"
            android:id="@+id/ll_level"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:orientation="horizontal"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@id/tv_name"
            android:paddingRight="2dp"
            android:paddingLeft="1dp"
            android:layout_centerVertical="true"
            tools:visibility="visible">
            <TextView
                android:id="@+id/anchor_fans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/withe"
                android:textSize="10sp"
                android:layout_marginLeft="2dp"
                android:layout_gravity="center"/>
        </LinearLayout>
        <ImageView

            android:id="@+id/jiantou"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/goon"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"/>
    </RelativeLayout>
</LinearLayout>
