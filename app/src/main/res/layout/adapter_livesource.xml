<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@color/transparent_background">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@color/transparent_background"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/machname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/textcolor_1"
                android:text="雷霆VS勇士"
                android:layout_marginRight="44dp"/>
            <TextView
                android:id="@+id/level"
                android:layout_width="46dp"
                android:layout_height="19dp"
                android:textSize="11sp"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:textColor="@color/textcolor_1"
                android:background="@drawable/rentangle_source_level"
                android:text="高质量"
                android:visibility="gone"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="7dp"
            android:orientation="horizontal"
            android:visibility="gone">
            <TextView
                android:id="@+id/loaduser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/textcolor_2"
                android:text="上传者：青椒"/>
            <TextView
                android:id="@+id/usercount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_marginLeft="15dp"
                android:textColor="@color/textcolor_2"
                android:text="源调用：263次"/>
        </LinearLayout>

    </LinearLayout>

<CheckBox
    android:id="@+id/source_selector"
    android:layout_width="20dp"
    android:layout_height="20dp"
    android:button="@null"
    android:background="@drawable/radiobt_selector"
    android:layout_centerVertical="true"
    android:layout_alignParentRight="true"
    android:layout_marginRight="8dp"/>
<RelativeLayout
    android:id="@+id/rl_base"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

</RelativeLayout>
</RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/view"/>
</LinearLayout>