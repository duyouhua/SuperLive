<?xml version="1.0" encoding="utf-8"?>
<com.joytouch.superlive.widget.KeyboardListenRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/root_my"
    android:background="@drawable/ok_head_sign"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_alignParentRight="true"
        android:id="@+id/iv_closeactivity"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="right"
        android:background="@drawable/close_black"
        android:layout_width="25dp"
        android:layout_height="25dp" />
    <LinearLayout
        android:layout_marginTop="70dp"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:maxLength="14"
            android:id="@+id/et_title"
            android:textColorHint="@color/white"
            android:background="#00000000"
            android:layout_marginTop="17dp"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:hint="请输入标题"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="38dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_marginLeft="25dp"
                android:layout_width="wrap_content"
                android:layout_height="88dp">

                <com.joytouch.superlive.widget.CircleImageView
                    android:id="@+id/iv_tubiao1"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/qizhi_bac"
                    android:layout_width="60dp"
                    android:layout_height="60dp"/>
                <ImageView
                    android:layout_marginBottom="20dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/sign_name"
                    android:layout_width="15dp"
                    android:layout_height="15dp" />
                <EditText
                    android:gravity="center"
                    android:id="@+id/et_duiname1"
                    android:maxLength="7"
                    android:textColorHint="@color/white"
                    android:layout_marginTop="3dp"
                    android:layout_alignParentBottom="true"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:background="#00000000"
                    android:hint="请输入队名"
                    android:layout_centerHorizontal="true"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <TextView
                android:layout_weight="1"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="23dp"
                android:text="VS"
                android:layout_width="50dp"
                android:layout_height="30dp" />
            <RelativeLayout
                android:layout_marginRight="25dp"
                android:layout_width="wrap_content"
                android:layout_height="88dp">
                <com.joytouch.superlive.widget.CircleImageView
                    android:id="@+id/iv_tubiao2"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/qizhi_bac"
                    android:layout_width="60dp"
                    android:layout_height="60dp"/>
                <ImageView
                    android:layout_marginBottom="20dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/sign_name"
                    android:layout_width="15dp"
                    android:layout_height="15dp" />
                <EditText
                    android:gravity="center"
                    android:id="@+id/et_duiname2"
                    android:maxLength="7"
                    android:textColorHint="@color/white"
                    android:layout_marginTop="3dp"
                    android:layout_alignParentBottom="true"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:background="#00000000"
                    android:hint="请输入队名"
                    android:layout_centerHorizontal="true"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ll_type"
                android:layout_marginTop="20dp"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="22dp">
                <TextView
                    android:textColor="@color/white"
                    android:text="赛事类型"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_type"
                    android:layout_marginRight="3dp"
                    android:textColor="@color/white"
                    android:text="足球"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/down_goon"
                    android:layout_width="15dp"
                    android:layout_height="15dp" />
            </LinearLayout>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:background="#50ffffff"
                android:layout_width="match_parent"
                android:layout_height="1dp" />
            <LinearLayout
                android:id="@+id/ll_starttime"
                android:layout_marginTop="20dp"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="22dp">
                <TextView
                    android:textColor="@color/white"
                    android:text="开始时间"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_starttime"
                    android:layout_marginRight="3dp"
                    android:textColor="@color/white"
                    android:text="8-23 16:00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/down_goon"
                    android:layout_width="15dp"
                    android:layout_height="15dp" />
            </LinearLayout>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:background="#50ffffff"
                android:layout_width="match_parent"
                android:layout_height="1dp" />
            <LinearLayout
                android:id="@+id/ll_endtime"
                android:layout_marginTop="20dp"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="22dp">
                <TextView
                    android:textColor="@color/white"
                    android:text="结束时间"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/stop_time"
                    android:layout_marginRight="3dp"
                    android:textColor="@color/white"
                    android:text="8-23 18:00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/down_goon"
                    android:layout_width="15dp"
                    android:layout_height="15dp" />
            </LinearLayout>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:background="#50ffffff"
                android:layout_width="match_parent"
                android:layout_height="1dp" />
            <TextView
                android:id="@+id/tv_shenqing"
                android:gravity="center"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:layout_marginTop="35dp"
                android:layout_gravity="center"
                android:background="@drawable/zhiboselect"
                android:text="申请比赛"
                android:layout_width="200dp"
                android:layout_height="40dp" />
        </LinearLayout>

    </LinearLayout>


</com.joytouch.superlive.widget.KeyboardListenRelativeLayout>