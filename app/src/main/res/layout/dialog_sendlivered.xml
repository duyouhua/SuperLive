<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="220dp"
        android:layout_height="264dp"
        android:layout_centerInParent="true"
        android:background="@drawable/retangle_soild_withe">
        <RelativeLayout
            android:id="@+id/rl_top"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/retangle_soild_red">
            <ImageView
                android:id="@+id/iv_finish"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/close_black"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/rl_top">
            <ImageView
                android:id="@+id/iv_red"
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/present_4"
                android:layout_marginTop="12dp"/>
            <TextView
                android:id="@+id/tv_hongbao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拼手气红包"
                android:layout_below="@id/iv_red"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:textColor="@color/textcolor_2"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="888 "
                android:layout_below="@id/tv_hongbao"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textColor="@color/textcolor_1"
                android:textSize="12sp"
                android:drawableRight="@drawable/gold"/>
            <TextView
                android:id="@+id/tv_tishi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/textcolor_2"
                android:text="*发送该红包需要支付888金币"
                android:layout_below="@id/tv_num"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp" />
            <TextView
                android:id="@+id/tv_send"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:text="赠送"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:background="@drawable/retangle_main_15"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/tv_tishi"
                android:layout_marginTop="12dp"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>