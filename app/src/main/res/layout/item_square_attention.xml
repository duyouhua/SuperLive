<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white">
        <com.joytouch.superlive.widget.CircleImageView
            android:id="@+id/iv_icon"
            style="@style/Item_icon"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_icon"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp">
            <RelativeLayout
                android:id="@+id/rl_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="jiasheng"
                    android:textColor="@color/textcolor_1"
                    android:textSize="14sp"
                    android:maxLength="8"/>
                <ImageView
                    android:id="@+id/iv_level"
                    android:layout_width="25dp"
                    android:layout_height="13dp"
                    android:background="@drawable/level1"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tv_name"
                    android:layout_marginLeft="8dp"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_renzheng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_name"
                android:textSize="10sp"
                android:textColor="@color/textcolor_2"
                android:text="这是对他的认证这是对他的认证这是对他的认证这是对他的认证这是对他的认证"
                android:layout_marginTop="2dp"
                android:singleLine="true"
                android:layout_marginRight="120dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_statue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:background="@drawable/charge_shape_fill_theme_color"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">
            <ImageView
                android:id="@+id/iv_guessing"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:background="@drawable/gueessing"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/tv_gueessing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正在竞猜"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_guessing"
                android:layout_marginLeft="2dp"
                android:textColor="@color/white"
                android:textSize="12sp"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>