<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/withe">
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:background="#d1d1d1"/>
        <RelativeLayout
            android:id="@+id/rl_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <com.joytouch.superlive.widget.CircleImageView
                android:id="@+id/iv_point_living"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:src="@color/textcolor_1"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"/>
            <TextView
                android:id="@+id/tv_title_living"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="黄蜂VS篮网比赛直播中>"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_point_living"
                android:layout_marginLeft="12dp"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:background="@drawable/retang_solid_textcolor_2"
                android:paddingLeft="10dp"
                android:paddingRight="32dp"
                android:paddingBottom="6dp"
                android:paddingTop="6dp"
                android:visibility="gone"
                tools:visibility="gone"/>
            <RelativeLayout
                android:id="@+id/rl_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_point_living"
                android:layout_marginLeft="12dp">
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="火箭vs奇才"
                    android:textColor="@color/textcolor_1"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/tv_title_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(常规赛)"
                    android:textSize="14sp"
                    android:textColor="@color/textcolor_1"
                    android:layout_toRightOf="@id/tv_title"
                    android:layout_alignBottom="@id/tv_title"
                    android:layout_marginLeft="8dp"/>
            </RelativeLayout>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="刚刚"
            android:textColor="@color/textcolor_1"
            android:textSize="14sp"
            android:layout_below="@+id/rl_1"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="16dp"/>
    </RelativeLayout>
</RelativeLayout>
