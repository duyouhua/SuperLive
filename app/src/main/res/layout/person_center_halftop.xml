<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_gravity="bottom"
    android:layout_height="wrap_content">

    <LinearLayout
        android:showDividers="middle"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:tag="header"
            android:id="@+id/rl_user_messsage"
            android:layout_width="match_parent"
            android:layout_height="255dp">

            <ImageView
                android:id="@+id/iv_message"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/message"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"/>
            <ImageView
                android:visibility="gone"
                android:id="@+id/red_point"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/v4_hongdian"
                android:layout_alignRight="@id/iv_message"
                android:layout_alignTop="@id/iv_message"/>
            <com.joytouch.superlive.widget.CircleImageView
                android:id="@+id/iv_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/defulticon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"/>
            <RelativeLayout
                android:id="@+id/rl_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/iv_icon"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="花椒小姐"
                    android:layout_centerVertical="true"
                    android:textSize="15sp"
                    android:textColor="@color/white"/>
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/ll_level"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@id/tv_name"
                    android:paddingRight="2dp"
                    android:paddingLeft="1dp"
                    android:layout_centerVertical="true"
                    >
                    <TextView
                        android:id="@+id/anchor_fans"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/withe"
                        android:textSize="10sp"
                        android:layout_marginLeft="2dp"
                        android:layout_gravity="center"/>

                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@+id/rl_name"
                android:layout_marginTop="13dp"
                android:layout_below="@+id/iv_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:background="@drawable/xun_1"
                    android:id="@+id/medal1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/withe"
                    android:textSize="10sp"
                    android:layout_marginLeft="1dp"
                    android:layout_gravity="center"/>
                <ImageView
                    android:background="@drawable/xun_2"
                    android:id="@+id/medal2"
                    android:layout_toRightOf="@+id/medal1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/withe"
                    android:textSize="10sp"
                    android:layout_marginLeft="3dp"
                    android:layout_gravity="center"/>
                <ImageView
                    android:background="@drawable/xun_3"
                    android:layout_toRightOf="@+id/medal2"
                    android:id="@+id/medal3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/withe"
                    android:textSize="10sp"
                    android:layout_marginLeft="3dp"
                    android:layout_gravity="center"/>
            </RelativeLayout>
            <RelativeLayout

                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:id="@+id/all_mon"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_below="@id/rl_name"
                android:layout_marginTop="5dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_marginTop="6dp"
                        android:layout_marginRight="2dp"
                        android:id="@+id/jinbi"
                        android:background="@drawable/gold"
                        android:layout_width="12dp"
                        android:layout_height="12dp" />

                    <TextView
                        android:gravity="center"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/white"
                        android:id="@+id/my_money"
                        android:textSize="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginLeft="3dp"/>
                    <ImageView
                        android:layout_marginTop="6dp"
                        android:layout_marginRight="2dp"
                        android:background="@drawable/ballgoldlogo"
                        android:layout_width="12dp"
                        android:layout_marginLeft="8dp"
                        android:layout_height="12dp" />

                    <TextView
                        android:id="@+id/ballgold"
                        android:gravity="center"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        android:layout_marginLeft="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"/>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_attentionfans"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_below="@id/tv_sign"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp">
                <View
                    android:id="@+id/line"
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:background="#66ffffff"
                    android:layout_centerHorizontal="true" />
                <RelativeLayout
                    android:id="@+id/rl_attention"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/line"
                    android:layout_marginRight="32dp">
                    <TextView
                        android:id="@+id/tv_attention"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="关注"
                        android:layout_centerVertical="true"
                        android:textSize="15sp"
                        android:textColor="@color/white"/>
                    <TextView
                        android:id="@+id/tv_attention_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:layout_toRightOf="@id/tv_attention"
                        android:layout_marginLeft="4dp"/>

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_fans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/line"
                    android:layout_marginLeft="32dp">
                    <TextView
                        android:id="@+id/tv_fans"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="粉丝"
                        android:layout_centerVertical="true"
                        android:textSize="15sp"
                        android:textColor="@color/white"/>
                    <TextView
                        android:id="@+id/tv_fans_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:layout_toRightOf="@id/tv_fans"
                        android:layout_marginLeft="4dp"/>

                </RelativeLayout>
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/iv_point_fans"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/v4_hongdian"
                    android:layout_toRightOf="@id/rl_fans"
                    android:layout_marginLeft="4dp"/>
            </RelativeLayout>

            <TextView
                android:paddingRight="30dp"
                android:paddingLeft="30dp"
                android:singleLine="true"
                android:layout_gravity="center"
                android:id="@+id/tv_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="努力和遗憾，哪一个更痛苦"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_below="@+id/all_mon"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>