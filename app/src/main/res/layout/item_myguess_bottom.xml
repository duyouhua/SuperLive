<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@color/white">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp">
                <RelativeLayout
                    android:id="@+id/rl_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_nr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="竞猜内容："
                        android:textColor="@color/textcolor_2"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/tv_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tv_nr"
                        android:text="第二节比赛湖人落后10分"
                        android:textColor="@color/textcolor_1"
                        android:textSize="12sp"
                        android:layout_marginRight="100dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_gold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_content"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:id="@+id/tv_jb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="投注金额："
                        android:textColor="@color/textcolor_2"
                        android:textSize="12sp"/>
                    <ImageView
                        android:layout_marginLeft="2dp"
                        android:id="@+id/mon"
                        android:layout_toRightOf="@+id/tv_jb"
                        android:background="@drawable/rew_jinbi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginLeft="2dp"
                        android:id="@+id/tv_gold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/mon"
                        android:text="500金币"
                        android:textColor="@color/textcolor_1"
                        android:textSize="12sp"
                        android:layout_marginRight="100dp"/>
                </RelativeLayout>
                <ImageView
                    android:id="@+id/iv_goon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/goon"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>
                <TextView
                    android:id="@+id/tv_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未开奖"
                    android:layout_toLeftOf="@id/iv_goon"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/main" />
            </RelativeLayout>
            <ImageView
                android:id="@+id/iv_isWin"
                android:layout_width="50dp"
                android:layout_height="54dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                android:background="@drawable/guess_win"/>
        </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/review_line_color">

    </RelativeLayout>
</LinearLayout>
