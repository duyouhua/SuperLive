<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg"
    tools:context="com.joytouch.superlive.activity.RegisterActivity">
    <include
        android:id="@+id/title"
        layout="@layout/titlebar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/load_input_line_back"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp">
        <EditText
            android:id="@+id/et_phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@null"
            android:hint="请输入手机号"
            android:textSize="15sp"
            android:textColorHint="@color/editext_hint"
            android:paddingLeft="8dp"
            android:inputType="number"
            android:maxLength="11"/>
        <View
            android:layout_width="1dp"
            android:layout_height="24dp"
            android:background="@color/line_code"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/count_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="发送验证码"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/textcolor_1"/>
    </LinearLayout>
    <EditText
        android:id="@+id/et_code"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/load_input_line_back"
        android:layout_marginTop="10dp"
        android:hint="请输入验证码"
        android:textSize="15sp"
        android:textColorHint="@color/editext_hint"
        android:paddingLeft="8dp"
        android:inputType="number"
        android:maxLength="6"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"/>

    <Button
        android:id="@+id/but_load"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:text="提交"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:background="@drawable/retang_solid_buton_bg"/>
</LinearLayout>
