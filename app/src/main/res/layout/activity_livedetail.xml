<?xml version="1.0" encoding="utf-8"?>
<com.joytouch.superlive.widget.MyLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parent">
    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawerlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/vedioView"
                android:layout_width="match_parent"
                android:layout_height="200dp">
                <include
                    android:id="@+id/mediaPlayer"
                    layout="@layout/videoplayer"/>
                <RelativeLayout
                    android:id="@+id/normaluser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:clickable="true"
                    android:background="#66000000">
                    <ImageView
                        android:id="@+id/back"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="7dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/finish"/>
                    <TextView
                        android:id="@+id/match_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="@color/withe"
                        android:textSize="16sp"
                        android:text=""
                        />
                    <TextView
                        android:id="@+id/fullscreen_match_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/withe"
                        android:textSize="16sp"
                        android:layout_toRightOf="@id/back"
                        android:layout_centerVertical="true"
                        android:text="76VS湖人"
                        android:visibility="gone"
                        />
                    <RadioButton
                        android:id="@+id/barrage"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:textSize="15sp"
                        android:button="@null"
                        android:textColor="@color/textcolor_main_withe"
                        android:text="弹"
                        android:background="@drawable/barrage_bg_selector"
                        android:layout_marginRight="15dp"
                        android:visibility="gone"
                        android:layout_alignParentRight="true"
                        android:gravity="center"/>
                    <RelativeLayout
                        android:id="@+id/fullscreen_room"
                        android:layout_width="150dp"
                        android:layout_height="35dp"
                        android:layout_toLeftOf="@id/barrage"
                        android:layout_marginRight="15dp"
                        android:visibility="gone">
                        <com.joytouch.superlive.widget.CircleImageView
                            android:id="@+id/fullscreen_head"
                            android:layout_width="35dp"
                            android:layout_alignParentRight="true"
                            android:layout_height="35dp"
                            android:src="@drawable/defulticon"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@id/fullscreen_head"
                            android:layout_alignTop="@id/fullscreen_head"
                            android:layout_marginRight="6dp"
                            android:layout_centerVertical="true"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/fullscreen_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/withe"
                                android:textSize="12sp"
                                android:gravity="center_vertical|right"
                                android:text="花椒小姐的昵称"/>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/room_bet"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="10sp"
                                    android:textColor="@color/color_yellow"
                                    android:text="[1000每注]"/>
                                <TextView
                                    android:id="@+id/fullscreen_online"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/editext_hint"
                                    android:textSize="10sp"
                                    android:layout_marginLeft="7dp"
                                    android:text="300人" />

                            </LinearLayout>
                        </LinearLayout>


                    </RelativeLayout>
                    <ImageView
                        android:id="@+id/fullscreen"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/allscreen"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="12dp"/>
                </RelativeLayout>

                <!--动画部分-->
                <RelativeLayout
                    android:layout_marginBottom="70dp"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/iv_light_left"
                        android:background="@drawable/light_left"
                        android:layout_width="90dp"
                        android:layout_height="90dp" />
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tv_left_light"
                        android:textSize="40dp"
                        android:textColor="@color/white"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="45dp"
                        android:text="+200"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:visibility="gone"
                        android:textSize="40dp"
                        android:textColor="@color/white"
                        android:layout_marginRight="45dp"
                        android:id="@+id/tv_right_light"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="+300"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:visibility="gone"
                        android:layout_alignParentRight="true"
                        android:id="@+id/iv_light_right"
                        android:background="@drawable/light_right"
                        android:layout_width="90dp"
                        android:layout_height="90dp" />


                </RelativeLayout>

                <LinearLayout
                   android:visibility="gone"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/re_bifen_bu"
                    android:layout_marginBottom="10dp"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="30dp">
                        <TextView
                            android:layout_weight="1"
                            android:background="@color/bg_red"
                            android:id="@+id/tv_team1color"
                            android:textColor="#333333"
                            android:layout_width="6dp"
                            android:layout_height="15dp" />
                        <TextView
                            android:layout_weight="3"
                            android:textColor="#333333"
                            android:gravity="center"
                            android:background="@drawable/combinedshape"
                            android:textSize="6dp"
                            android:id="@+id/dui_1"
                            android:layout_width="45dp"
                            android:layout_height="15dp"/>
                        <LinearLayout
                            android:layout_weight="5"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_weight="1"
                                android:background="@color/white"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_weight="1"
                                    android:textSize="10dp"
                                    android:textColor="@color/white"
                                    android:gravity="center"
                                    android:text="0"
                                    android:id="@+id/iv_dui_1"
                                    android:background="#333333"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp" />

                                <TextView
                                    android:layout_weight="1"
                                    android:layout_marginLeft="0.5dp"
                                    android:textSize="10dp"
                                    android:textColor="@color/white"
                                    android:gravity="center"
                                    android:text="0"
                                    android:id="@+id/iv_dui_2"
                                    android:layout_toRightOf="@+id/iv_dui_1"
                                    android:background="#333333"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp" />
                            </LinearLayout>
                            <TextView
                                android:layout_weight="1"
                                android:id="@+id/add_time"
                                android:gravity="center"
                                android:textSize="5dp"
                                android:background="@drawable/time_bac"
                                android:text="已开始"
                                android:layout_width="match_parent"
                                android:layout_height="10dp" />
                        </LinearLayout>
                        <TextView
                            android:layout_weight="3"
                            android:textColor="#333333"
                            android:gravity="center"
                            android:background="@drawable/combinedshape"
                            android:textSize="6dp"
                            android:id="@+id/dui_2"
                            android:layout_width="45dp"
                            android:layout_height="15dp" />
                        <TextView
                            android:layout_weight="1"
                            android:background="@color/bg_red"
                            android:id="@+id/tv_team2color"
                            android:gravity="center"
                            android:textSize="6dp"
                            android:layout_width="6dp"
                            android:layout_height="15dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="30dp">

                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/bottom"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_alignParentBottom="true"
                    android:clickable="true"
                    android:visibility="gone"
                    android:background="#66000000">
                    <LinearLayout
                        android:id="@+id/ll_room"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="vertical">
                        <LinearLayout
                            android:id="@+id/ll_achor"
                            android:layout_width="wrap_content"
                            android:layout_height="18dp"
                            android:gravity="bottom"
                            android:layout_marginLeft="10dp"
                            android:layout_centerVertical="true"
                            >
                            <TextView
                                android:id="@+id/rooms"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:textColor="@color/withe"
                                android:text="房间"/>
                            <ImageView
                                android:layout_width="11dp"
                                android:layout_height="8dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginBottom="2dp"
                                android:background="@drawable/down"/>
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/online"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="@color/withe"
                        android:textSize="11sp"
                        android:text="在线4000人"/>

                </RelativeLayout>
                <!--全屏-->
                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/full_bottom"
                    android:layout_width="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_height="68dp">
                    <LinearLayout
                        android:id="@+id/top"
                        android:layout_width="111dp"
                        android:layout_height="21dp"
                        android:layout_centerHorizontal="true"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:background="@drawable/full_lottery_top">
                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@drawable/clock"/>
                        <TextView
                            android:id="@+id/tv_counttime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:layout_marginLeft="3dp"
                            android:textColor="@color/withe"
                            android:text="58s"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:gravity="center"
                        android:layout_below="@id/top"
                        android:background="@drawable/full_lottey_bottom"
                        android:layout_marginLeft="51dp"
                        android:layout_marginRight="51dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/room_money"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/color_yellow"
                                android:textSize="12sp"
                                android:text="[每注300]"/>
                            <TextView
                                android:id="@+id/lottery_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/withe"
                                android:textSize="12sp"
                                android:layout_marginLeft="4dp"
                                android:text="[每注300]"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_vertical|right"
                                android:paddingRight="40dp"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="10sp"
                                    android:textColor="@color/withe"
                                    android:text="投注金额："/>
                                <ImageView
                                    android:layout_width="8dp"
                                    android:layout_height="8dp"
                                    android:background="@drawable/gold"/>
                                <TextView
                                    android:id="@+id/my_bet_money"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/color_yellow"
                                    android:textSize="10sp"
                                    android:text="3000"/>
                            </LinearLayout>
                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="14dp"
                                android:background="#4cffffff"/>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="10sp"
                                    android:textColor="@color/withe"
                                    android:layout_marginLeft="40dp"
                                    android:text="预计收益："/>
                                <ImageView
                                    android:layout_width="8dp"
                                    android:layout_height="8dp"
                                    android:background="@drawable/gold"/>
                                <TextView
                                    android:id="@+id/predict_money"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/color_yellow"
                                    android:textSize="10sp"
                                    android:text="3000"/>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/left_check"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:layout_alignParentBottom="true"
                        android:gravity="center_horizontal|bottom"
                        android:background="@drawable/fullscreen_bt_one_left"
                        android:paddingRight="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/left_answer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:textColor="@color/withe"
                            android:text="能"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="8dp"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="8dp"
                                android:layout_height="8dp"
                                android:background="@drawable/gold"/>
                            <TextView
                                android:id="@+id/left_total_money"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/color_yellow"
                                android:textSize="10sp"
                                android:text="3000"/>
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/right_check"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:gravity="center_horizontal|bottom"
                        android:background="@drawable/fullscreen_bt_one_right"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/right_answer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:textColor="@color/withe"
                            android:text="能"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="8dp"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="8dp"
                                android:layout_height="8dp"
                                android:background="@drawable/gold"/>
                            <TextView
                                android:id="@+id/right_all_money"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/color_yellow"
                                android:textSize="10sp"
                                android:text="3000"/>
                        </LinearLayout>
                    </LinearLayout>

                </RelativeLayout>
                <!--全屏按键-->
                <RelativeLayout
                    android:id="@+id/lottery_rl"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="18dp"
                    android:layout_marginRight="18dp"
                    android:visibility="gone"
                    >
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/cicrl_black"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:textColor="@color/withe"
                        android:layout_alignParentBottom="true"
                        android:text="猜"/>
                    <TextView
                        android:id="@+id/lotterycount"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:background="@drawable/cicrl_barrage"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:textColor="@color/withe"
                        android:text=""
                        android:visibility="gone"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
                <RadioButton
                    android:id="@+id/lockscreen"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="24dp"
                    android:button="@null"
                    android:visibility="gone"
                    android:background="@drawable/lockscreen"/>
                <ImageView
                    android:id="@+id/playerStart"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/start"/>
                <include
                    android:layout_alignParentBottom="true"
                    layout="@layout/match"
                    android:layout_height="55dp"
                    android:layout_width="match_parent" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/label"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:layout_below="@id/vedioView"
                android:background="@color/withe"/>

            <com.joytouch.superlive.widget.CoustomViewPager
                android:id="@+id/fragmentCotainer"
                android:layout_width="match_parent"
                android:layout_below="@id/label"
                android:layout_height="match_parent"/>


            <RelativeLayout
                android:id="@+id/bottom_chat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/ll_chat"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:background="@color/chat_activity_bg"
                    android:gravity="center_vertical">
                    <EditText
                        android:id="@+id/chat"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textColorHint="@color/editext_hint"
                        android:background="@drawable/retangle_soild_withe"
                        android:hint="说两句吧..."
                        android:imeOptions="actionSend"
                        android:inputType="text"
                        android:paddingLeft="8dp"
                        android:textSize="14sp"
                        android:textColor="@color/textcolor_1"
                        android:layout_weight="1"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <ImageView
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/present_logo"
                            android:layout_weight="1"
                            android:id="@+id/present"
                            android:layout_width="30dp"
                            android:layout_height="30dp"/>
                        <ImageView
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:id="@+id/add"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/chat_add"/>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/add_content"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:orientation="horizontal"
                    android:background="@color/chat_activity_bg"
                    android:layout_below="@id/ll_chat">
                    <LinearLayout
                        style="@style/ll">
                        <LinearLayout
                            android:id="@+id/invitation"
                            style="@style/add_content">
                            <ImageView
                                style="@style/add_content_logo"
                                android:background="@drawable/add_invitation"/>
                        </LinearLayout>
                        <TextView
                            style="@style/add_content_name"
                            android:text="邀请好友"/>
                    </LinearLayout>
                    <LinearLayout
                        style="@style/ll">
                        <LinearLayout
                            android:id="@+id/pay"
                            style="@style/add_content">
                            <ImageView
                                style="@style/add_content_logo"
                                android:background="@drawable/add_pay"/>
                        </LinearLayout>
                        <TextView
                            style="@style/add_content_name"
                            android:text="金币充值"/>
                    </LinearLayout>

                    <LinearLayout
                        style="@style/ll">
                        <LinearLayout
                            android:id="@+id/game"
                            style="@style/add_content">
                            <ImageView
                                style="@style/add_content_logo"
                                android:background="@drawable/add_game"/>
                        </LinearLayout>
                        <TextView
                            style="@style/add_content_name"
                            android:text="休闲游戏"/>
                    </LinearLayout>
                    <LinearLayout
                        style="@style/ll">
                        <LinearLayout
                            android:id="@+id/exceptional"
                            style="@style/add_content">
                            <ImageView
                                style="@style/add_content_logo"
                                android:background="@drawable/start_lottery"/>
                        </LinearLayout>
                        <TextView
                            style="@style/add_content_name"
                            android:text="发起竞猜"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_lottery"
                    android:layout_width="match_parent"
                    android:layout_height="235dp"
                    android:orientation="vertical"
                    android:layout_below="@id/ll_chat"
                    android:background="@color/white"
                    android:visibility="gone"
                    tools:visibility="visible">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/iv_left"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/topic_left"
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="center_vertical"/>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent">
                            <android.support.v4.view.ViewPager
                                android:id="@+id/vp_question"
                                android:layout_width="match_parent"
                                android:layout_height="160dp"
                                android:visibility="gone">
                            </android.support.v4.view.ViewPager>
                            <TextView
                                android:id="@+id/tv_noquestion"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="暂无题目"
                                android:textSize="14sp"
                                android:layout_centerInParent="true"
                                android:textColor="@color/textcolor_1"/>
                        </RelativeLayout>
                        <ImageView
                            android:id="@+id/iv_right"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/topic_right"
                            android:layout_marginRight="10dp"
                            android:layout_gravity="center_vertical"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/line_code"
                        android:layout_marginLeft="17dp"
                        android:layout_marginRight="17dp"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <Button
                            android:id="@+id/but_start"
                            android:layout_width="86dp"
                            android:layout_height="33dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/charge_shape_fill_theme_color"
                            android:text="确定"
                            android:textColor="@color/white"/>
                        <TextView
                            android:id="@+id/tv_set_qustion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="我要出题"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="20dp"
                            android:textColor="@color/textcolor_1"
                            android:textSize="15sp"
                            android:visibility="gone"/>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

            <ImageView
                android:id="@+id/add_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/bottom_chat"
                android:visibility="gone"
                android:background="#66000000"/>
            <RelativeLayout
                android:id="@+id/containers"
                android:layout_width="match_parent"
                android:layout_below="@id/vedioView"
                android:layout_height="match_parent"/>
            <include
                android:visibility="gone"
                android:id="@+id/loading"
                android:layout_below="@id/label"
                layout="@layout/loading_failed"
                android:layout_height="match_parent"
                android:layout_width="match_parent" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/drawerll"
            android:layout_width="250dp"
            android:layout_gravity="end"
            android:layout_height="match_parent"
            android:paddingTop="35dp"
            android:background="#b2000000"
            android:clickable="true"
            android:orientation="vertical">
            <com.joytouch.superlive.widget.PullToRefreshLayout
                android:id="@+id/fullscreen_anchor_ll"
                android:layout_width="match_parent"
                android:layout_gravity="end"
                android:layout_height="match_parent"
                android:background="@color/transparent_background"
                >
                <include layout="@layout/refresh_head"/>
                <com.joytouch.superlive.widget.PullableListView
                    android:id="@+id/fullscreen_anchor_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@color/transparent_background"
                    android:listSelector="@color/transparent_background"
                    android:dividerHeight="0dp"
                    android:background="@color/transparent_background"
                    />
                <include layout="@layout/load_more"/>
            </com.joytouch.superlive.widget.PullToRefreshLayout>
            <include android:id="@+id/emptys"
                layout="@layout/empty_lottery"/>
        </RelativeLayout>
    </android.support.v4.widget.DrawerLayout>
</com.joytouch.superlive.widget.MyLinearLayout>