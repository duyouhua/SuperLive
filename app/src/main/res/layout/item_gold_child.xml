<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white">
        <com.joytouch.superlive.widget.CircleImageView
            android:id="@+id/iv_icon"
            style="@style/Item_icon"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_icon"
            android:layout_marginRight="40dp">
            <RelativeLayout
                android:id="@+id/rl_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp">
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="jiasheng"
                    android:layout_centerVertical="true"
                    android:textColor="@color/textcolor_1"
                    android:textSize="16sp"/>
                <LinearLayout
                    android:id="@+id/ll_level"
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="4dp"
                    android:background="@drawable/level_bg"
                    android:layout_toRightOf="@id/tv_name"
                    android:paddingRight="2dp"
                    android:paddingLeft="1dp"
                    android:layout_centerVertical="true">
                    <ImageView
                        android:id="@+id/iv_level"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@drawable/star_withe"
                        android:layout_gravity="center_vertical"/>
                    <TextView
                        android:id="@+id/tv_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/withe"
                        android:textSize="10sp"
                        android:layout_marginLeft="2dp"
                        android:text="1100"
                        android:layout_gravity="center"/>
                </LinearLayout>
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="大爱加油"
                android:layout_marginLeft="8dp"
                android:layout_below="@id/rl_name"
                android:textSize="12sp"
                android:textColor="@color/textcolor_2"
                android:layout_marginTop="4dp"
                android:singleLine="true"
                android:maxLength="30"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_gold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+50"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:background="@drawable/gold_water"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/view"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</LinearLayout>