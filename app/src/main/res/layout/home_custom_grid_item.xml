<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content" >

    <TextView
        android:layout_alignParentLeft="true"
        android:background="#30979797"
        android:layout_width="@dimen/v4_view_0.5"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/rl_bac_item"
        android:paddingTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="100dp" >
        <TextView
            android:layout_alignParentBottom="true"
            android:background="#30979797"
            android:layout_width="match_parent"
            android:layout_height="@dimen/v4_view_0.5" />
        <ImageView
            android:layout_centerHorizontal="true"
            android:id="@+id/iv_item"
            android:layout_width="50dp"
            android:layout_height="45dp"/>
        <TextView
            android:textSize="12dp"
            android:textColor="#333333"
            android:gravity="center_horizontal"
            android:id="@+id/tv_name_liwu"
            android:layout_below="@+id/iv_item"
            android:text="礼物名称"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tv_name_liwu"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="23dp">
            <TextView
                android:textColor="#333333"
                android:id="@+id/tv_presentname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:singleLine="true"
                android:text="我要卖房"
                android:textSize="12sp" />
            <ImageView
                android:layout_marginLeft="3dp"
                android:background="@drawable/reward0"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:singleLine="true"/>
        </LinearLayout>

    </RelativeLayout>


</LinearLayout>