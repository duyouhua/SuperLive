<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginBottom="8dp"
        android:background="@color/withe">
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/textcolor_1"
        android:textSize="15sp"
        android:lineSpacingExtra="4dp"
        android:text=""/>
        <LinearLayout
            android:id="@+id/normalTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_centerHorizontal="true"
            android:visibility="visible"
            android:layout_marginTop="15dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <Button
                    android:id="@+id/left_selector"
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:textColor="@color/withe"
                    android:background="@drawable/retangle_yellow_gray"
                    android:text=""/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:background="@drawable/gold"/>
                    <TextView
                        android:id="@+id/left_gold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:textColor="@color/textcolor_2"
                        android:text=""/>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/odds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:textColor="@color/textcolor_2"
                    android:text="@string/odds_name"/>
                <TextView
                    android:id="@+id/odds_ratio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/textcolor_2"
                    android:visibility="gone"
                    android:text="1:1.35"/>
                <TextView
                    android:id="@+id/state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textcolor_1"
                    android:textSize="12sp"
                    android:text=""/>
                <TextView
                    android:id="@+id/detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textcolor_2"
                    android:textSize="12sp"
                    android:layout_marginTop="10dp"
                    android:text="查看详情"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <Button
                    android:id="@+id/right_selector"
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:textColor="@color/withe"
                    android:background="@drawable/retangle_yellow_gray"
                    android:text=""/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:background="@drawable/gold"/>
                    <TextView
                        android:id="@+id/right_gold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:textColor="@color/textcolor_2"
                        android:text=""/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/container_left"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp"
            android:layout_alignLeft="@id/normalTitle"
            android:layout_alignBottom="@id/normalTitle"/>
        <RelativeLayout
            android:id="@+id/container_right"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp"
            android:layout_alignBottom="@id/normalTitle"
            android:layout_alignRight="@id/normalTitle"/>
        <com.joytouch.superlive.widget.CircleImageView
            android:id="@+id/head_left"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:border_color="#56A4FF"
            app:border_width="1dp"
            android:src="@drawable/defulticon"
            android:layout_marginTop="5dp"
            android:layout_alignLeft="@id/normalTitle"
            android:layout_marginLeft="30dp"
            android:visibility="gone"
            android:layout_below="@id/title"/>
        <com.joytouch.superlive.widget.CircleImageView
            android:id="@+id/head_right"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:border_color="#56A4FF"
            app:border_width="1dp"
            android:src="@drawable/defulticon"
            android:layout_marginTop="5dp"
            android:layout_alignRight="@id/normalTitle"
            android:layout_marginRight="30dp"
            android:visibility="gone"
            android:layout_below="@id/title"/>
        <RelativeLayout
            android:id="@+id/win"
            android:layout_width="match_parent"
            android:layout_below="@id/title"
            android:visibility="gone"
            android:layout_height="85dp">
            <TextView
                android:id="@+id/success_gold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_yellow"
                android:textSize="25sp"
                android:layout_centerVertical="true"
                android:text="+500"/>
            <ImageView
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/win_logo"/>
            <TextView
                android:id="@+id/success_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/textcolor_2"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:text="查看详情"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>