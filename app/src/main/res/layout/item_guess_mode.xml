<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:descendantFocusability="blocksDescendants"
        android:background="@drawable/retangle_solid_fc">
        <!-- 时间  队名-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/team1_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/color_black"
                    android:layout_centerInParent="true"
                    android:text="活塞"
                    android:gravity="center_horizontal|bottom"
                    android:textSize="14sp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/stoptime"
                    android:layout_width="108dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/textcolor_1"
                    android:text="今天 9:00"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:textSize="12sp"
                    android:background="@drawable/livelist_time"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/team2_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:textColor="@color/color_black"
                    android:text="快船"
                    android:gravity="center_horizontal|bottom"
                    android:layout_alignParentRight="true"
                    android:textSize="14sp"/>
            </RelativeLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <RadioButton
                    android:id="@+id/rl_victory"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/livelistlottery_selector"
                    android:button="@null"
                    android:textSize="15sp"
                    android:text="胜"
                    android:enabled="true"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:textColor="@color/textcolor_yellow_withe"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_victory"
                    android:layout_marginTop="7dp"
                    android:layout_centerHorizontal="true">
                    <ImageView
                        android:id="@+id/iv_gold_icon"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@drawable/rew_jinbi"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/tv_victory_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4360"
                        android:layout_toRightOf="@id/iv_gold_icon"
                        android:layout_marginLeft="4dp"
                        android:layout_centerVertical="true"
                        android:textSize="10sp"
                        android:textColor="@color/textcolor_2"/>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_vs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VS"
                    android:layout_centerHorizontal="true"
                    android:textSize="20sp"
                    android:layout_marginTop="16dp"
                    android:textColor="@color/textcolor_2"/>
                <RadioButton
                    android:id="@+id/rl_draw"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/livelistlottery_selector"
                    android:button="@null"
                    android:textSize="15sp"
                    android:text="平"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/textcolor_yellow_withe"/>
                <RelativeLayout
                    android:id="@+id/rl_center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_draw"
                    android:layout_marginTop="7dp"
                    android:layout_centerHorizontal="true">
                    <ImageView
                        android:id="@+id/iv_gold_icon2"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@drawable/rew_jinbi"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/tv_draw_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4360"
                        android:layout_toRightOf="@id/iv_gold_icon2"
                        android:layout_marginLeft="4dp"
                        android:layout_centerVertical="true"
                        android:textSize="10sp"
                        android:textColor="@color/textcolor_2"/>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <RadioButton
                    android:id="@+id/rl_fail"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/livelistlottery_selector"
                    android:button="@null"
                    android:textSize="15sp"
                    android:text="胜"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/textcolor_yellow_withe"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_fail"
                    android:layout_marginTop="7dp"
                    android:layout_centerHorizontal="true">
                    <ImageView
                        android:id="@+id/iv_gold_icon3"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@drawable/rew_jinbi"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/tv_fail_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4360"
                        android:layout_toRightOf="@id/iv_gold_icon3"
                        android:layout_marginLeft="4dp"
                        android:layout_centerVertical="true"
                        android:textSize="10sp"
                        android:textColor="@color/textcolor_2"/>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
        <RelativeLayout
            android:id="@+id/leftcontainer"
            android:layout_width="62dp"
            android:layout_height="45dp"
            android:layout_marginLeft="33dp"/>
        <RelativeLayout
            android:id="@+id/center_container"
            android:layout_width="62dp"
            android:layout_height="45dp"
            android:layout_marginRight="21dp"
            android:layout_centerHorizontal="true"/>
        <RelativeLayout
            android:id="@+id/right_container"
            android:layout_width="74dp"
            android:layout_height="45dp"
            android:layout_marginRight="21dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</LinearLayout>