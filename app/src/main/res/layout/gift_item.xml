<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:orientation="horizontal"
    android:background="#00000000"
    android:layout_height="wrap_content">
<RelativeLayout
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="70dp">
    <LinearLayout
        android:layout_marginTop="20dp"
        android:background="@drawable/gift_bac_red"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:id="@+id/linearLayout">
        <com.joytouch.superlive.widget.CircleImageView
            android:id="@+id/iv_icon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/defulticon"
            android:layout_centerInParent="true"/>
        <LinearLayout
            android:layout_marginLeft="5dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="航空母舰"
                android:textColor="@android:color/white"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/tv_msg"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="送一束玫瑰湖"
                android:textColor="@android:color/white"
                android:textSize="11sp"/>
        </LinearLayout>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
           />

    </LinearLayout>
    <ImageView
        android:id="@+id/iv_present"
        android:background="@drawable/present_3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/linearLayout"
        android:layout_alignEnd="@+id/linearLayout" />
</RelativeLayout>
    <com.joytouch.superlive.widget.MagicTextView
        android:id="@+id/gift_num"
        android:gravity="center"
        xmlns:qwerjk="http://schemas.android.com/apk/res/com.joytouch.superlive"
        android:textSize="20sp"
        android:textColor="@android:color/holo_red_light"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        qwerjk:foreground="@android:color/holo_blue_bright"
        qwerjk:innerShadowDy="2"
        qwerjk:innerShadowColor="#FF000000"
        qwerjk:innerShadowRadius="1"
        qwerjk:strokeColor="@android:color/white"
        qwerjk:strokeJoinStyle="miter"
        qwerjk:strokeWidth="2"
        android:text="X123" />
</LinearLayout>