<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="15dp">

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="15dp">
        <ProgressBar
            android:layout_marginRight="-5dp"
            android:id="@+id/progress_horizontal_right"
            style="@style/progressBarHorizontal_arabia"
            android:layout_width="100dp"
            android:layout_height="11dp"
            android:max="100" android:progress="50" />
        <TextView
            android:layout_width="30dp"
            android:layout_height="1dp" />
        <ProgressBar
            android:layout_marginLeft="-5dp"
            android:id="@+id/progress_horizontal_left"
            style="@style/progressBarHorizontal"
            android:layout_width="100dp" android:layout_height="11dp"
            android:max="100" android:progress="10" />
    </LinearLayout>

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="VS"
        android:gravity="center"
        android:layout_width="32dp"
        android:layout_height="15dp"
        android:textSize="12sp"
        android:background="@drawable/retangle_black_40"/>



    <TextView
        android:visibility="gone"
        android:layout_marginRight="-5dp"
        android:id="@+id/red_count"
        android:layout_width="88dp"
        android:layout_height="11dp"
        android:textColor="@color/withe"
        android:background="@drawable/redcount"/>
    <TextView
        android:visibility="gone"
        android:layout_marginLeft="-5dp"
        android:id="@+id/blue_count"
        android:layout_width="88dp"
        android:layout_height="11dp"
        android:textColor="@color/withe"
        android:gravity="right|center_vertical"
        android:background="@drawable/blue_count"
        android:text=""/>

</RelativeLayout>


