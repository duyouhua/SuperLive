<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/titlebar_color">
        <RelativeLayout
            android:id="@+id/rl_left"
            android:layout_width="80dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_rank_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:layout_centerInParent="true"
                android:textColor="@color/textcolor_1"
                android:textSize="16sp"/>
            <ImageView
                android:id="@+id/iv_top_b"
                android:layout_width="54dp"
                android:layout_height="9dp"
                android:background="@drawable/rank_top1_b"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="18dp"
                android:visibility="gone"/>
            <com.joytouch.superlive.widget.CircleImageView
                android:id="@+id/iv_icon"
                style="@style/Item_icon"
                android:layout_centerInParent="true"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/iv_top_a"
                android:layout_width="43dp"
                android:layout_height="9dp"
                android:background="@drawable/rank_top1_a"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="14dp"
                android:visibility="gone"/>
        </RelativeLayout>
        <TextView
            android:maxEms="8"
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="jiashen"
            android:textColor="@color/textcolor_1"
            android:textSize="14sp"
            android:maxLength="8"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/rl_left"
            android:layout_marginLeft="4dp"/>
        <ImageView
            android:id="@+id/iv_sex"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:background="@drawable/sex_w_nobg"
            android:layout_toRightOf="@id/tv_name"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/level"
            android:layout_width="25dp"
            android:layout_height="13dp"
            android:layout_marginLeft="4dp"
            android:background="@drawable/level1"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_sex"
            android:paddingRight="2dp"
            android:paddingLeft="1dp"
            tools:visibility="visible"
            />
        <ImageView
            android:id="@+id/topic"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_toRightOf="@id/level"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:visibility="gone"
            android:background="@drawable/topic"/>
        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">
            <TextView
                android:id="@+id/tv_gold_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+194"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:textSize="12sp"
                android:textColor="@color/textcolor_1"/>
        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>