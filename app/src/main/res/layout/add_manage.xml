<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/title"
        layout="@layout/titlebar"/>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/okaddress"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="65dp">
        <ImageView
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/iv_1"
            android:background="@drawable/dingwei"
            android:layout_width="21dp"
            android:layout_height="21dp" />
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/iv_1"
            android:textSize="10dp"
            android:textColor="#666666"
            android:text="默认"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" />
        <TextView
            android:layout_marginTop="12dp"
            android:layout_marginLeft="24dp"
            android:id="@+id/tv_name"
            android:layout_toRightOf="@+id/iv_1"
            android:textSize="15dp"
            android:textColor="#333333"
            android:text="jack"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="12dp"
            android:id="@+id/tv_phone"
            android:textSize="12dp"
            android:textColor="#333333"
            android:text="18298192053"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginEnd="24dp"
            android:layout_alignBottom="@+id/tv_name"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_marginRight="30dp"
            android:id="@+id/tv_advice"
            android:textSize="12dp"
            android:textColor="#333333"
            android:text="我的我的地址我的地址我的地址我的地址我的地址我的地址我的地址地址"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView"
            android:layout_alignLeft="@+id/tv_name"
            android:layout_alignStart="@+id/tv_name" />
        <ImageView
            android:layout_marginRight="5dp"
            android:layout_marginBottom="22dp"
            android:layout_marginTop="22dp"
            android:background="@drawable/goon"
            android:layout_height="20dp"
            android:layout_width="20dp"
            android:id="@+id/iv_guess_goon"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <TextView
        android:visibility="gone"
        android:id="@+id/update_address"
        android:background="@color/white"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:textSize="15dp"
        android:textColor="#333333"
        android:text="添加新地址"
        android:layout_width="match_parent"
        android:layout_height="60dp" />
    <TextView
        android:id="@+id/tv_zhongxin"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="了解中银通支付卡"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/bt_ok"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="35dp"
        android:text="确认"
        android:layout_width="230dp"
        android:layout_height="45dp"
        android:background="@drawable/rectangle_main"
        android:textColor="@color/v4_withe"/>

</LinearLayout>