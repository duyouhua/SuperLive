<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="325dp"
        android:layout_height="518dp"
        android:layout_centerInParent="true">
    <LinearLayout
        android:layout_width="325dp"
        android:layout_height="518dp"
        android:orientation="vertical"
        android:background="@drawable/retangle_soild_withe_10">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="65dp">
            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:text=""
                android:textColor="@color/textcolor_1"
                android:layout_marginRight="45dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_centerVertical="true"
                android:textSize="15sp"/>
            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/close_black"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Starting"
            android:layout_width="match_parent"
            android:layout_height="90dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp">
                    <Button
                        android:id="@+id/but_left"
                        android:layout_width="80dp"
                        android:layout_height="35dp"
                        android:background="@drawable/retangle_yellow_gray"
                        android:textSize="15sp"
                        android:text=""
                        android:textColor="@color/white"
                        android:layout_marginTop="10dp"/>
                    <com.joytouch.superlive.widget.CircleImageView
                        android:id="@+id/iv_icon_left"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/defulticon"
                        app:border_color="#56A4FF"
                        app:border_width="1dp"
                        android:layout_centerHorizontal="true"/>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/but_left"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp">
                        <ImageView
                            android:id="@+id/iv_jinbi_left"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:background="@drawable/rew_jinbi"
                            android:layout_centerVertical="true"/>
                        <TextView
                            android:id="@+id/tv_num_left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4390"
                            android:textSize="12sp"
                            android:textColor="@color/textcolor_2"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/iv_jinbi_left"
                            android:layout_marginLeft="4dp"/>
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/textcolor_1"
                        android:textSize="12sp"/>
                    <RelativeLayout
                        android:id="@+id/rl_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/tv_time"
                        android:layout_marginTop="4dp">
                        <ImageView
                            android:id="@+id/iv_share"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:background="@drawable/share_black"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="分享"
                            android:textSize="12sp"
                            android:textColor="@color/textcolor_2"
                            android:layout_marginLeft="4dp"
                            android:layout_toRightOf="@id/iv_share"/>

                    </RelativeLayout>
                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/odds_center_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal"
                    android:visibility="gone"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#606974"
                        android:textSize="12sp"
                        android:text="@string/odds_name"/>
                    <TextView
                        android:id="@+id/odds_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#606974"
                        android:textSize="20sp"
                        android:text="1:1.25"/>
                    <TextView
                        android:id="@+id/odds_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_centerInParent="true"
                        android:textColor="@color/textcolor_1"
                        android:textSize="12sp"/>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp">
                    <Button
                        android:id="@+id/but_right"
                        android:layout_width="80dp"
                        android:layout_height="35dp"
                        android:background="@drawable/retangle_yellow_gray"
                        android:textColor="@color/white"
                        android:text=""
                        android:layout_marginTop="10dp"/>
                    <com.joytouch.superlive.widget.CircleImageView
                        android:id="@+id/iv_icon_right"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/defulticon"
                        app:border_color="#56A4FF"
                        app:border_width="1dp"
                        android:layout_centerHorizontal="true"/>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/but_right"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp">
                        <ImageView
                            android:id="@+id/iv_jinbi_right"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:background="@drawable/rew_jinbi"
                            android:layout_centerVertical="true"/>
                        <TextView
                            android:id="@+id/tv_num_right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4390"
                            android:textSize="12sp"
                            android:textColor="@color/textcolor_2"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/iv_jinbi_right"
                            android:layout_marginLeft="4dp"/>
                    </RelativeLayout>
                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_dashang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/guess_details_line">
            </View>
            <RelativeLayout
                android:id="@+id/win_rl"
                android:layout_width="match_parent"
                android:layout_height="88dp">
                <RelativeLayout
                    android:id="@+id/rl_kaijiang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true">
                    <TextView
                        android:id="@+id/tv_kaijiang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="开奖结果："
                        android:textSize="12sp"
                        android:textColor="@color/textcolor_2"
                        android:layout_marginLeft="15dp"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/tv_open_result"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/textcolor_1"
                        android:textSize="12sp"
                        android:layout_toRightOf="@id/tv_kaijiang"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_touzhu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">
                    <TextView
                        android:id="@+id/tv_touzhu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="投注结果："
                        android:textSize="12sp"
                        android:textColor="@color/textcolor_2"
                        android:layout_marginLeft="15dp"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/tv_betting_result"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/rank_item_gold_num_color"
                        android:textSize="12sp"
                        android:layout_toRightOf="@id/tv_touzhu"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="15dp">
                    <TextView
                        android:id="@+id/tv_jine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="投注金额："
                        android:textSize="12sp"
                        android:textColor="@color/textcolor_2"
                        android:layout_marginLeft="15dp"
                        android:layout_centerVertical="true"/>
                    <ImageView
                        android:id="@+id/iv_jinbi"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:background="@drawable/rew_jinbi"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/tv_jine"/>
                    <TextView
                        android:id="@+id/tv_betting_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1350"
                        android:textColor="@color/textcolor_1"
                        android:textSize="12sp"
                        android:layout_toRightOf="@id/iv_jinbi"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp">
                    <TextView
                        android:id="@+id/tv_gold_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+1500"
                        android:textSize="20sp"
                        android:textColor="@color/rank_item_gold_num_color"
                        android:layout_alignParentRight="true"/>
                    <RelativeLayout
                        android:id="@+id/rl_dashang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/orangle_selector"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:paddingLeft="13dp"
                        android:paddingRight="13dp"
                        android:layout_below="@id/tv_gold_num"
                        android:layout_marginTop="9dp"
                        android:layout_alignParentRight="true">
                        <TextView
                            android:id="@+id/tv_dashang"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="打赏主播"
                            android:textColor="@color/rank_item_gold_num_color"
                            android:textSize="12sp"
                            android:layout_centerVertical="true"/>
                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:background="@drawable/rew_jinbi"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/tv_dashang"
                            android:layout_marginLeft="2dp"/>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/guess_details_line">
            </View>
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/ll_refresh"
            android:layout_width="match_parent"
            android:layout_height="20dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true">
                <TextView
                    android:id="@+id/tv_touzhu_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我投注的：0"
                    android:textSize="12sp"
                    android:textColor="@color/textcolor_2" />
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/rew_jinbi"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tv_touzhu_num"
                    android:layout_marginLeft="4dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">
                <TextView
                    android:id="@+id/tv_shouyi_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预计收益：0"
                    android:textSize="12sp"
                    android:textColor="@color/textcolor_2" />
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/rew_jinbi"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tv_shouyi_num"
                    android:layout_marginLeft="4dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_refresh"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true">
                <ImageView
                    android:id="@+id/iv_refresh"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/refresh"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="刷新"
                    android:layout_centerVertical="true"
                    android:textColor="@color/rank_item_gold_num_color"
                    android:textSize="12sp"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@id/iv_refresh"/>
            </RelativeLayout>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/ll_xuanxiang"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal">
            <!--选项1-->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/iv_win_l"
                    android:layout_width="70dp"
                    android:layout_height="64dp"
                    android:background="@drawable/guess_win"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">
                    <TextView
                        android:id="@+id/tv_option_l"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="能"
                        android:layout_centerHorizontal="true"
                        android:textSize="16sp"
                        android:textColor="@color/textcolor_1"/>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_option_l"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp">
                        <ImageView
                            android:id="@+id/iv_1"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:background="@drawable/rew_jinbi"
                            android:layout_centerVertical="true"/>
                        <TextView
                            android:id="@+id/tv_gold_left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="14390"
                            android:textSize="12sp"
                            android:textColor="@color/textcolor_2"
                            android:layout_toRightOf="@id/iv_1"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/review_line_color"/>
            <!--选项2-->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/iv_win_r"
                    android:layout_width="70dp"
                    android:layout_height="64dp"
                    android:background="@drawable/guess_win"
                    android:layout_alignParentRight="true"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">
                    <TextView
                        android:id="@+id/tv_option_r"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="不能"
                        android:layout_centerHorizontal="true"
                        android:textSize="16sp"
                        android:textColor="@color/textcolor_1"/>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_option_r"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp">
                        <ImageView
                            android:id="@+id/iv_2"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:background="@drawable/rew_jinbi"
                            android:layout_centerVertical="true"/>
                        <TextView
                            android:id="@+id/tv_gold_right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="14390"
                            android:textSize="12sp"
                            android:textColor="@color/textcolor_2"
                            android:layout_toRightOf="@id/iv_2"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
        <com.joytouch.superlive.widget.PullToRefreshLayout
            android:id="@+id/refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp">
            <include layout="@layout/refresh_head" />
            <com.joytouch.superlive.widget.PullableScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:scrollbars="none">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <com.joytouch.superlive.widget.MyListView
                        android:id="@+id/listView_l"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:divider="@null">

                    </com.joytouch.superlive.widget.MyListView>
                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/view"/>
                    <com.joytouch.superlive.widget.MyListView
                        android:id="@+id/listView_r"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:divider="@null">

                    </com.joytouch.superlive.widget.MyListView>
                </LinearLayout>
            </com.joytouch.superlive.widget.PullableScrollView>
            <include layout="@layout/load_more"/>
        </com.joytouch.superlive.widget.PullToRefreshLayout>

    </LinearLayout>
    <RelativeLayout
    android:id="@+id/container_left"
    android:layout_width="80dp"
    android:layout_height="78dp"
        android:layout_marginLeft="15dp"/>
    <RelativeLayout
        android:id="@+id/container_right"
        android:layout_width="80dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_height="78dp"/>
        <include
            android:id="@+id/loading"
            tools:visibility="gone"
            layout="@layout/loading_failed"/>
    </RelativeLayout>

</RelativeLayout>