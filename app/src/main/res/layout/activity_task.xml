        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_reward_2"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/reward_jincai"
            android:background="@drawable/reward0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/attention_item_line_color"/>
    <RelativeLayout
