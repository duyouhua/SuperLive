<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/main_bg"
    android:layout_height="match_parent">
    <include
        android:id="@+id/title"
        layout="@layout/titlebar"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/titlebar_color">
        <TextView
            android:text="每日登录(1次)"
            android:id="@+id/reward_name_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:textSize="14sp"
            android:textColor="@color/textcolor_1"/>
        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/yeok"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"/>
        <TextView
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:id="@+id/reward_denglu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/iv_1"
            android:text="4046918"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:textColor="@color/yellow_jinse"
            android:textSize="16sp" />
        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_reward_1"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/reward_denglu"
            android:background="@drawable/reward0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/attention_item_line_color"/>
