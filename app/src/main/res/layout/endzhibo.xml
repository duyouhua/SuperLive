<?xml version="1.0" encoding="utf-8"?>
<com.joytouch.superlive.widget.TanxingScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/root_my"
    android:background="@drawable/ok_head_sign"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.joytouch.superlive.widget.CircleImageView
                android:layout_centerHorizontal="true"
                android:id="@+id/iv_image"
                android:background="@drawable/qizhi_bac"
                android:layout_width="90dp"
                android:layout_height="90dp"/>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_name"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:text="糖糖"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_level"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/level10"
                    android:layout_width="20dp"
                    android:layout_height="11dp" />
            </LinearLayout>
            <TextView
                android:layout_marginTop="12dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:background="#30ffffff"
                android:layout_width="match_parent"
                android:layout_height="@dimen/v4_view_0.5" />
            <TextView
                android:textColor="@color/white"
                android:textSize="25sp"
                android:gravity="center"
                android:text="直播已结束"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginTop="56dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="190dp"
                    android:layout_height="60dp">
                    <TextView
                        android:singleLine="true"
                        android:gravity="right"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="10dp"
                        android:id="@+id/tv_team1"
                        android:text="运营连队哈哈哈"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_alignEnd="@+id/tv_team1"
                        android:gravity="right"
                        android:textColor="#60ffffff"
                        android:textSize="10sp"
                        android:layout_marginTop="3dp"
                        android:layout_below="@+id/tv_team1"
                        android:id="@+id/tv_qiupiao_num1"
                        android:text="0球票"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <com.joytouch.superlive.widget.CircleImageView
                        android:id="@+id/iv_tubiao1"
                        android:layout_toRightOf="@+id/tv_team1"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/qizhi_bac"
                        android:layout_width="60dp"
                        android:layout_height="60dp"/>

                </RelativeLayout>

                <TextView
                    android:layout_width="15dp"
                    android:layout_height="wrap_content">

                </TextView>
                <RelativeLayout
                    android:layout_width="190dp"
                    android:layout_height="60dp">
                    <com.joytouch.superlive.widget.CircleImageView
                        android:id="@+id/iv_tubiao2"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/qizhi_bac"
                        android:layout_width="60dp"
                        android:layout_height="60dp"/>
                    <TextView
                        android:singleLine="true"
                        android:gravity="left"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:layout_marginTop="12dp"
                        android:layout_toRightOf="@+id/iv_tubiao2"
                        android:id="@+id/tv_team2"
                        android:text="运营连队哈哈哈"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:gravity="left"
                        android:textColor="#60ffffff"
                        android:textSize="10sp"
                        android:layout_marginTop="3dp"
                        android:layout_toRightOf="@+id/iv_tubiao2"
                        android:layout_below="@+id/tv_team2"
                        android:id="@+id/tv_qiupiao_num2"
                        android:text="0球票"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <include
                    android:gravity="center"
                    layout="@layout/match_end_progress"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:gravity="center"
                            android:id="@+id/tv_alllines"
                            android:textColor="@color/white"
                            android:textSize="30dp"
                            android:text="0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_marginTop="3dp"
                            android:textColor="#60ffffff"
                            android:textSize="13sp"
                            android:text="总观看人数"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <TextView
                        android:layout_marginLeft="13dp"
                        android:layout_marginRight="13dp"
                        android:background="#30ffffff"
                        android:layout_width="@dimen/v4_view_0.5"
                        android:layout_height="57dp" />
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <TextView
                            android:gravity="center"
                            android:id="@+id/tv_roomall"
                            android:textColor="@color/white"
                            android:textSize="30dp"
                            android:text="0  "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tv_allqiupiaonum"
                            android:layout_marginTop="3dp"
                            android:textColor="#60ffffff"
                            android:textSize="13sp"
                            android:text="收获球票   "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>


                </LinearLayout>

                <TextView
                    android:layout_marginTop="60dp"
                    android:id="@+id/tv_back"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:background="@drawable/zhiboselect"
                    android:text="返回首页"
                    android:layout_width="200dp"
                    android:layout_height="40dp" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>



</com.joytouch.superlive.widget.TanxingScrollView>