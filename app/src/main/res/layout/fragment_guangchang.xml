<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.joytouch.superlive.activity.AttentionAndFansActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/theme_color">
        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_finish"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/finish"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"/>
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true">
            <RadioButton
                android:id="@+id/rb_lottery"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:button="@null"
                android:text="竞猜"
                android:background="@drawable/selector_attentionfans_tab_line"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:checked="true"/>
            <View
                android:id="@+id/view"
                android:layout_width="30dp"
                android:layout_height="match_parent"/>
            <RadioButton
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/rb_squ"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:button="@null"
                android:text="广场"
                android:background="@drawable/selector_attentionfans_tab_line"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"/>
        </RadioGroup>

    </RelativeLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>
</LinearLayout>
