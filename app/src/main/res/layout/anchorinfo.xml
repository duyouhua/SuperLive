<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="290dp"
        android:layout_height="350dp">
<LinearLayout
    android:layout_width="290dp"
    android:layout_height="350dp"
    android:orientation="vertical"
    android:background="@drawable/retangle_10">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <ImageView
            android:id="@+id/iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:visibility="gone"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="11dp"
            android:background="@color/withe"
            android:layout_alignParentBottom="true"/>
        <com.joytouch.superlive.widget.RoundedImageView
            android:id="@+id/anchor_bg"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            app:riv_corner_radius_bottom_left="0dp"
            app:riv_corner_radius_bottom_right="0dp"
            app:riv_corner_radius_top_left="10dp"
            app:riv_corner_radius_top_right="10dp"
            app:riv_border_width="0dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true"
            android:scaleType="fitXY"
            android:src="@drawable/morenbac"
            />

        <RelativeLayout
            android:id="@+id/rl_close"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/inform"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/report"/>
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/withe"
                    android:textSize="12sp"
                    android:layout_centerVertical="true"
                    android:text="举报"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/close"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/withe_close"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <com.joytouch.superlive.widget.CircleImageView
            android:id="@+id/anchor_headimg"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginLeft="25dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/rl_close"
            android:src="@drawable/defulticon"/>
        <TextView
            android:id="@+id/signature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:layout_marginTop="8dp"
            android:textColor="@color/withe"
            android:text="努力和遗憾，哪个更痛苦"
            android:layout_toRightOf="@+id/anchor_headimg"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="5dp"/>
        <LinearLayout
            android:id="@+id/ll_name"
            android:layout_toRightOf="@+id/anchor_headimg"
            android:layout_marginLeft="5dp"
            android:layout_above="@id/signature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/anchor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/withe"
                android:text="糖糖er"/>
            <ImageView
                android:id="@+id/level"
                android:layout_width="wrap_content"
                android:layout_height="13dp"
                android:orientation="horizontal"
                android:layout_marginLeft="3dp"
                android:background="@drawable/level1"
                android:paddingBottom="3dp"/>


        </LinearLayout>

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/anchor_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    </LinearLayout>
</LinearLayout>
        <include
            android:id="@+id/loading"
            tools:visibility="gone"
            layout="@layout/loading_failed"/>
    </RelativeLayout>
</LinearLayout>