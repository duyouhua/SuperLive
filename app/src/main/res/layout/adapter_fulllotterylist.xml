<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/normalLottery"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@color/transparent_background">
        <LinearLayout
            android:id="@+id/topll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|top">
                <ImageView
                    android:id="@+id/last"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/full_lottery_last"/>
                   </LinearLayout>
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/withe"
                android:text=""/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/topll"
            >
            <LinearLayout
                android:layout_width="76dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <Button
                    android:id="@+id/left"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/retangle_yellow_gray"
                    android:textColor="@color/withe"
                    android:textSize="12sp"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:background="@drawable/gold"/>
                    <TextView
                        android:id="@+id/left_gold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:textColor="#9b9b9b"
                        android:text=""/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="58dp"
                android:layout_height="30dp"
                android:gravity="center">
                <TextView
                    android:id="@+id/stoptime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/withe"
                    android:text=""
                    android:visibility="visible"
                    android:textSize="10sp"/>
                <TextView
                    android:id="@+id/clock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:visibility="gone"
                    android:textColor="@color/color_yellow"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="76dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <Button
                    android:id="@+id/right"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/retangle_yellow_gray"
                    android:textColor="@color/withe"
                    android:textSize="12sp"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:background="@drawable/gold"/>
                    <TextView
                        android:id="@+id/right_gold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:textColor="#9b9b9b"
                        android:text=""/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_below="@id/bottom"
            android:background="#32ffffff"/>
        <RelativeLayout
        android:id="@+id/container_left"
        android:layout_width="76dp"
        android:layout_height="match_parent"
        android:layout_alignLeft="@id/bottom"
        android:layout_above="@id/view"
        android:layout_marginBottom="45dp"/>
        <RelativeLayout
            android:id="@+id/container_right"
            android:layout_width="76dp"
            android:layout_height="match_parent"
            android:layout_alignRight="@id/bottom"
            android:layout_above="@id/view"
            android:layout_marginBottom="45dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/oddslottery"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:background="@color/transparent_background">
    <LinearLayout
        android:id="@+id/odds_topll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|top">
        </LinearLayout>
        <TextView
            android:id="@+id/odds_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/withe"
            android:text=""/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/odds_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/odds_topll"
        >
        <LinearLayout
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <Button
                android:id="@+id/odds_left"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/retangle_blue_gray"
                android:textColor="@color/withe"
                android:textSize="12sp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/gold"/>
                <TextView
                    android:id="@+id/odds_leftgold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textColor="#9b9b9b"
                    android:text=""/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="58dp"
            android:layout_height="30dp"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <Button
                android:id="@+id/odds_right"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/retangle_blue_gray"
                android:textColor="@color/withe"
                android:textSize="12sp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/gold"/>
                <TextView
                    android:id="@+id/odds_rightgold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textColor="#9b9b9b"
                    android:text=""/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:id="@+id/oddsll"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/odds_topll"
            android:layout_marginTop="12dp"
            android:layout_marginRight="96dp"
            android:layout_marginLeft="96dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/withe"
                android:textSize="10sp"
                android:text="赔率"/>
            <TextView
                android:id="@+id/odds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text=""
                android:textColor="@color/withe"/>
            <TextView
                android:id="@+id/odds_stoptime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text=""
                android:textColor="@color/withe"/>
        </LinearLayout>
    <View
        android:id="@+id/odds_view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/odds_bottom"
        android:background="#32ffffff"/>
    <RelativeLayout
        android:id="@+id/odds_container_left"
        android:layout_width="76dp"
        android:layout_height="match_parent"
        android:layout_alignLeft="@id/odds_bottom"
        android:layout_above="@id/odds_view"
        android:layout_marginBottom="45dp"/>
    <RelativeLayout
        android:id="@+id/odds_container_right"
        android:layout_width="76dp"
        android:layout_height="match_parent"
        android:layout_alignRight="@id/odds_bottom"
        android:layout_above="@id/odds_view"
        android:layout_marginBottom="45dp"/>
        <com.joytouch.superlive.widget.CircleImageView
            android:id="@+id/odds_righthead"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignRight="@id/odds_bottom"
            android:layout_below="@id/odds_topll"
            android:layout_marginTop="8dp"
            android:layout_marginRight="30dp"/>
        <com.joytouch.superlive.widget.CircleImageView
            android:id="@+id/odds_lefthead"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignLeft="@id/odds_bottom"
            android:layout_below="@id/odds_topll"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="30dp"/>
</RelativeLayout>
</LinearLayout>