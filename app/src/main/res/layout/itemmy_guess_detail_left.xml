<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">
            <com.joytouch.superlive.widget.CircleImageView
                android:id="@+id/iv_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:src="@color/theme_color"/>
            <TextView
                android:maxEms="5"
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="蜈蚣君哈斯U盾hi"
                android:layout_toRightOf="@id/iv_icon"
                android:textSize="12sp"
                android:textColor="@color/textcolor_2"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="3dp"
                android:singleLine="true"/>

            <TextView
                android:id="@+id/tv_gold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="6dp"
                android:text="1600"
                android:textSize="14sp"
                android:textColor="@color/guess_details_rusult"/>
            <ImageView
                android:id="@+id/iv_budao"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@+id/tv_name"
                android:background="@drawable/xiaodao"
                android:layout_width="16dp"
                android:layout_height="16dp" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>