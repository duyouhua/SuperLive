<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">
            <com.joytouch.superlive.widget.CircleImageView
                android:id="@+id/iv_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:src="@color/theme_color"
                android:layout_alignParentRight="true"/>
            <TextView
                android:maxEms="5"
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:maxLength="6"
                android:textSize="12sp"
                android:textColor="@color/textcolor_2"
                android:layout_centerVertical="true"
                android:layout_marginRight="4dp"
                android:layout_toLeftOf="@id/iv_icon"
                android:gravity="right"
                android:ellipsize="end"
                android:singleLine="true"/>
            <ImageView
                android:id="@+id/last"
                android:layout_toLeftOf="@+id/tv_name"
                android:background="@drawable/xiaodao"
                android:layout_width="11dp"
                android:layout_marginRight="4dp"
                android:layout_centerVertical="true"
                android:layout_height="11dp" />
            <TextView
                android:id="@+id/tv_gold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="6dp"
                android:text=""
                android:textSize="14sp"
                android:textColor="@color/guess_details_rusult"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>