<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="156dp"
        android:layout_centerInParent="true"
        android:background="@drawable/retangle_soild_withe">
        <ImageView
            android:id="@+id/iv_finish"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/close_black"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"/>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分享到"
            android:textColor="@color/textcolor_1"
            android:textSize="15sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"/>
        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/view"
            android:layout_below="@id/tv_title"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_below="@id/view_line"
            android:layout_centerHorizontal="true">

            <RelativeLayout
                android:id="@+id/rl_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_qq"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/qq"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QQ"
                    android:textSize="10sp"
                    android:textColor="@color/textcolor_1"
                    android:layout_below="@id/iv_qq"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"/>
            </RelativeLayout>
            <View
                android:layout_width="27dp"
                android:layout_height="1dp"/>
            <RelativeLayout
                android:id="@+id/rl_wx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_wx"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/wx"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信"
                    android:textSize="10sp"
                    android:textColor="@color/textcolor_1"
                    android:layout_below="@id/iv_wx"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"/>
            </RelativeLayout>
            <View
                android:layout_width="27dp"
                android:layout_height="1dp"/>
            <RelativeLayout
                android:id="@+id/rl_pyq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_pyq"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/pyq"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="朋友圈"
                    android:textSize="10sp"
                    android:textColor="@color/textcolor_1"
                    android:layout_below="@id/iv_pyq"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"/>
            </RelativeLayout>
            <View
                android:layout_width="27dp"
                android:layout_height="1dp"/>
            <RelativeLayout
                android:id="@+id/rl_fensi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_fensi"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/invitation_fans"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关注和粉丝"
                    android:textSize="10sp"
                    android:textColor="@color/textcolor_1"
                    android:layout_below="@id/iv_fensi"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>