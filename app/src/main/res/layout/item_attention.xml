<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/bg"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/titlebar_color"
        android:descendantFocusability="blocksDescendants">
        <com.joytouch.superlive.widget.CircleImageView
            android:id="@+id/iv_icon"
           style="@style/Item_icon"/>
        <RelativeLayout
            android:id="@+id/rl_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_icon"
            android:layout_marginLeft="8dp">
            <RelativeLayout
                android:id="@+id/rl_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="jiasheng"
                    android:textColor="@color/textcolor_1"
                    android:textSize="12sp"
                    android:layout_centerVertical="true"/>
                <LinearLayout
                    android:id="@+id/ll_level"
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@id/tv_name"
                    android:paddingRight="2dp"
                    android:paddingLeft="1dp"
                    android:layout_centerVertical="true">
                    <TextView
                        android:id="@+id/anchor_fans"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/withe"
                        android:textSize="10sp"
                        android:layout_marginLeft="2dp"
                        android:layout_gravity="center"/>
                </LinearLayout>
            </RelativeLayout>
            <TextView
                android:maxLines="2"
                android:layout_marginRight="185dp"
                android:id="@+id/tv_sign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="这是对他的认定"
                android:layout_below="@id/rl_name"
                android:textColor="@color/textcolor_1"
                android:textSize="12sp"
                android:layout_marginTop="4dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/iv_zhiboing"
            android:layout_marginTop="18dp"
            android:layout_marginRight="93dp"
            android:layout_toLeftOf="@+id/cb_attention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/charge_shape_fill_theme_color"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">
            <ImageView
                android:id="@+id/iv_guessing"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:background="@drawable/gueessing"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/tv_gueessing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正在竞猜"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_guessing"
                android:layout_marginLeft="2dp"
                android:textColor="@color/white"
                android:textSize="12sp"/>
        </RelativeLayout>
        <CheckBox
            android:button="@null"
            android:checked="true"
            style="@style/CustomAttentionCheckboxTheme"
            android:id="@+id/cb_attention"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="√ 已关注  "
            android:gravity="center"
            android:padding="4dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:textSize="13sp"
            android:textColor="@color/textcolor_1"/>
        <com.joytouch.superlive.widget.CircleImageView
            android:id="@+id/iv_jiantou"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@color/textcolor_1"
            android:layout_toLeftOf="@id/tv_attention"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:visibility="gone"/>
    </RelativeLayout>

</RelativeLayout>