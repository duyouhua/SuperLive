<?xml version="1.0" encoding="utf-8"?>
<com.joytouch.superlive.widget.MyLinearLayout
    android:id="@+id/mll"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.joytouch.superlive.activity.OpenLivingDetailsActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/vedioView"
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <include
                layout="@layout/videoplayer"/>
            <RelativeLayout
                android:id="@+id/ll_title"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:visibility="visible"
                android:clickable="true"
                android:background="@color/transparent_title">
                <ImageView
                    android:id="@+id/back"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="7dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/finish"/>
                <TextView
                    android:id="@+id/match_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/withe"
                    android:textSize="16sp"
                    android:maxLength="15"
                    android:text="76VS湖人"
                    />
                <ImageView
                    android:id="@+id/iv_rotate"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/rotate_camera"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:visibility="gone"/>
            </RelativeLayout>
            <ImageView
                android:id="@+id/iv_play"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/start"
                android:layout_centerInParent="true"/>
            <RelativeLayout
                android:id="@+id/bottom"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:visibility="gone"
                android:layout_alignParentBottom="true"
                android:clickable="true"
                android:background="@color/transparent_title">
                <LinearLayout
                    android:id="@+id/ll_room"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:gravity="bottom"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"
                        android:visibility="gone">
                        <TextView
                            android:id="@+id/rooms"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColor="@color/withe"
                            android:text="选择源"/>
                        <ImageView
                            android:layout_width="11dp"
                            android:layout_height="8dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginBottom="2dp"
                            android:background="@drawable/down"/>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/online"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/withe"
                    android:textSize="11sp"
                    android:text="在线人"/>
                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="48:30"
                    android:textSize="11sp"
                    android:textColor="@color/white"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:visibility="gone"/>
            </RelativeLayout>
            <include
                android:layout_alignParentBottom="true"
                layout="@layout/match"
                android:layout_height="55dp"
                android:layout_width="match_parent" />
            <RadioButton
                android:id="@+id/lockscreen"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="24dp"
                android:button="@null"
                android:visibility="gone"
                android:background="@drawable/lockscreen"/>

        </RelativeLayout>
        <LinearLayout
            android:id="@+id/label"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:background="@color/withe"
            android:layout_below="@+id/vedioView">
            <RadioGroup
                android:id="@+id/rg_tab"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <RadioButton
                    android:id="@+id/rb_chat"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="聊天室"
                    android:gravity="center"
                    android:background="@drawable/living_tab_bg"
                    android:textColor="@color/color_black"
                    android:button="@null"
                    android:layout_marginBottom="4dp"/>
                <View
                    android:id="@+id/view1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"/>
                <RadioButton
                    android:id="@+id/rb_lottery"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="竞猜"
                    android:gravity="center"
                    android:background="@drawable/living_tab_bg"
                    android:textColor="@color/color_black"
                    android:button="@null"
                    android:layout_marginBottom="4dp"/>
                <View
                    android:id="@+id/view2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2" />
                <RadioButton
                    android:id="@+id/rb_action"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="赛况"
                    android:gravity="center"
                    android:background="@drawable/living_tab_bg"
                    android:textColor="@color/color_black"
                    android:button="@null"
                    android:layout_marginBottom="4dp" />
                <View
                    android:id="@+id/view3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
                <RadioButton
                    android:id="@+id/rb_gold"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="金币流转"
                    android:gravity="center"
                    android:background="@drawable/living_tab_bg"
                    android:textColor="@color/color_black"
                    android:button="@null"
                    android:layout_marginBottom="4dp"
                    android:visibility="gone"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:visibility="gone"/>
            </RadioGroup>
        </LinearLayout>
            <com.joytouch.superlive.widget.CoustomViewPager
                android:id="@+id/fragmentCotainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/label"/>
        <RelativeLayout
            android:id="@+id/rl_chat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <RelativeLayout
                android:id="@+id/bottom_chat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                tools:visibility="visible">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view"/>
                <LinearLayout
                    android:id="@+id/ll_chat"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:background="@color/chat_activity_bg"
                    android:gravity="center_vertical">
                    <EditText
                        android:layout_marginRight="3dp"
                        android:id="@+id/et_input"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textColorHint="@color/editext_hint"
                        android:background="@drawable/retangle_soild_withe"
                        android:hint="说两句吧..."
                        android:paddingLeft="8dp"
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:imeOptions="actionSend"
                        android:inputType="text"/>
                    <LinearLayout
                        android:layout_marginLeft="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_weight="4.5">
                        <ImageView
                            android:layout_weight="1"
                            android:id="@+id/present"
                            android:layout_width="30dp"
                            android:layout_height="30dp"/>
                        <ImageView
                            android:id="@+id/add"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/chat_add"/>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/add_content"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:orientation="horizontal"
                    android:layout_below="@id/ll_chat"
                    android:background="@color/chat_activity_bg"
                    android:visibility="gone">
                    <LinearLayout
                        style="@style/ll">
                        <LinearLayout
                            android:id="@+id/invitation"
                            style="@style/add_content">
                            <ImageView
                                style="@style/add_content_logo"
                                android:background="@drawable/add_invitation"/>
                        </LinearLayout>
                        <TextView
                            style="@style/add_content_name"
                            android:text="邀请好友"/>
                    </LinearLayout>
                    <LinearLayout
                        style="@style/ll">
                        <LinearLayout
                            android:id="@+id/pay"
                            style="@style/add_content">
                            <ImageView
                                style="@style/add_content_logo"
                                android:background="@drawable/add_pay"/>
                        </LinearLayout>
                        <TextView
                            style="@style/add_content_name"
                            android:text="金币充值"/>
                    </LinearLayout>
                    <LinearLayout
                        style="@style/ll">
                        <LinearLayout
                            android:id="@+id/game"
                            style="@style/add_content">
                            <ImageView
                                style="@style/add_content_logo"
                                android:background="@drawable/add_game"/>
                        </LinearLayout>
                        <TextView
                            style="@style/add_content_name"
                            android:text="休闲游戏"/>
                    </LinearLayout>
                    <LinearLayout
                        style="@style/ll">
                        <LinearLayout
                            android:id="@+id/start_lottery"
                            style="@style/add_content">
                            <ImageView
                                style="@style/add_content_logo"
                                android:background="@drawable/start_lottery"/>
                        </LinearLayout>
                        <TextView
                            style="@style/add_content_name"
                            android:text="发起竞猜"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_lottery"
                    android:layout_width="match_parent"
                    android:layout_height="235dp"
                    android:orientation="vertical"
                    android:layout_below="@id/ll_chat"
                    android:background="@color/white"
                    android:visibility="gone"
                    tools:visibility="visible">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/iv_left"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/topic_left"
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="center_vertical"/>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent">
                            <android.support.v4.view.ViewPager
                                android:id="@+id/vp_question"
                                android:layout_width="match_parent"
                                android:layout_height="160dp"
                                android:visibility="gone">
                            </android.support.v4.view.ViewPager>
                            <TextView
                                android:id="@+id/tv_noquestion"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="暂无题目"
                                android:textSize="14sp"
                                android:layout_centerInParent="true"
                                android:textColor="@color/textcolor_1"/>
                        </RelativeLayout>
                        <ImageView
                            android:id="@+id/iv_right"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/topic_right"
                            android:layout_marginRight="10dp"
                            android:layout_gravity="center_vertical"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/line_code"
                        android:layout_marginLeft="17dp"
                        android:layout_marginRight="17dp"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <Button
                            android:id="@+id/but_start"
                            android:layout_width="86dp"
                            android:layout_height="33dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/charge_shape_fill_theme_color"
                            android:text="确定"
                            android:textColor="@color/white"/>
                        <TextView
                            android:id="@+id/tv_set_qustion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="我要出题"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="20dp"
                            android:textColor="@color/textcolor_1"
                            android:textSize="15sp"
                            android:visibility="gone"/>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
            <ImageView
                android:id="@+id/iv_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent_title"
                android:layout_above="@id/bottom_chat"
                android:visibility="gone"/>
        </RelativeLayout>

    </RelativeLayout>

</com.joytouch.superlive.widget.MyLinearLayout>
