<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:paddingLeft="34dp"
        android:paddingRight="34dp"
        android:gravity="center"
        android:background="@drawable/retangle_anchor">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textcolor_2"
                    android:textSize="12sp"
                    android:text="关注"/>
                <TextView
                    android:id="@+id/attention"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textcolor_1"
                    android:textSize="15sp"
                    android:layout_marginTop="4dp"
                    android:text=" 420"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textcolor_2"
                    android:textSize="12sp"
                    android:text="粉丝"/>
                <TextView
                    android:id="@+id/fans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textcolor_1"
                    android:textSize="15sp"
                    android:layout_marginTop="4dp"
                    android:text="1.8万"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textcolor_2"
                    android:textSize="12sp"
                    android:text="竞猜"/>
                <TextView
                    android:id="@+id/session"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textcolor_1"
                    android:textSize="15sp"
                    android:layout_marginTop="4dp"
                    android:text="184"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textcolor_2"
                    android:textSize="12sp"
                    android:text="胜率"/>
                <TextView
                    android:id="@+id/odds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textcolor_1"
                    android:textSize="15sp"
                    android:layout_marginTop="4dp"
                    android:text="80%"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/addattention"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="50dp"
            android:textColor="@color/withe"
            android:textSize="13sp"
            android:background="@drawable/retangle_main"
            android:text="+关注"
            android:gravity="center"/>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/exceptional"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:drawableLeft="@drawable/gold"
                android:drawablePadding="4dp"
                android:textColor="@color/textcolor_1"
                android:text="打赏50"
                android:visibility="gone"/>
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/editext_hint"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/homepage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/textcolor_1"
                android:text="主页"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>