<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/live_dialog_bg"/>

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="380dp"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:background="@drawable/live_setting_bg">
           <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">
            <ImageView
                android:id="@+id/close"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/withe_close"
                android:layout_alignParentRight="true"
                android:layout_marginTop="30dp"
                android:layout_marginRight="30dp"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="33dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textcolor_1"
                android:text="开始直播"
                android:textSize="15sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginTop="12dp"
                android:textColor="@color/editext_hint"
                android:text="在这之前需要启用一些装置"/>
            <RelativeLayout
                android:id="@+id/camera"
                android:layout_width="200dp"
                android:layout_height="37dp"
                android:background="@drawable/rentangle_60"
                android:layout_marginTop="40dp">
                <ImageView
                    android:id="@+id/camera_logo"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@drawable/photograph"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"/>
                <TextView
                    android:id="@+id/camera_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/main"
                    android:text="启用摄像头"
                    android:textSize="15sp"
                    android:layout_centerInParent="true"/>
                </RelativeLayout>
            <RelativeLayout
                android:id="@+id/microphone"
                android:layout_width="200dp"
                android:layout_height="37dp"
                android:background="@drawable/rentangle_60"
                android:layout_marginTop="20dp">
                <ImageView
                    android:id="@+id/microphone_logo"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@drawable/microphone"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"/>
                <TextView
                    android:id="@+id/microphone_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/main"
                    android:text="启用麦克风"
                    android:textSize="15sp"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
</LinearLayout>