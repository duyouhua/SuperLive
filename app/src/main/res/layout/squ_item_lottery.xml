<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:layout_marginBottom="8dp"
        android:background="@color/withe">
        <LinearLayout
            android:background="@color/chat_activity_bg"
            android:id="@+id/ll_title"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/type_logo"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/basketball"
                android:layout_width="10dp"
                android:layout_height="10dp" />
            <TextView
                android:id="@+id/tv_matchname"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:layout_marginLeft="8dp"
                android:text="湖人VS黄蜂常规赛"
                android:textColor="@color/textcolor_2"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:layout_below="@+id/ll_title"
            android:background="@drawable/lottery_time_bg"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:id="@+id/tv_touzhu"
            android:layout_width="70dp"
            android:layout_height="16dp"
            android:textColor="@color/textcolor_1"
            android:textSize="10sp"
            android:lineSpacingExtra="4dp"
            android:text="2000每注"/>
        <TextView
            android:maxLines="2"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/tv_touzhu"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textcolor_1"
            android:textSize="15sp"
            android:lineSpacingExtra="4dp"
            android:text="第一场比赛"/>
        <LinearLayout
            android:id="@+id/normalTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_centerHorizontal="true"
            android:visibility="visible"
            android:layout_marginTop="15dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <Button
                    android:id="@+id/left_selector"
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:textColor="@color/withe"
                    android:background="@drawable/retangle_yellow_gray"
                    android:text="能"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:background="@drawable/gold"/>
                    <TextView
                        android:id="@+id/left_gold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:textColor="@color/textcolor_2"
                        android:text="300"/>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/odds_ratio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/textcolor_1"
                    android:text="1:35截止"/>
                <TextView
                    android:layout_marginTop="4dp"
                    android:id="@+id/state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textcolor_2"
                    android:textSize="12sp"
                    android:text="进入直播间"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <Button
                    android:id="@+id/right_selector"
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:textColor="@color/withe"
                    android:background="@drawable/retangle_yellow_gray"
                    android:text="不能"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:background="@drawable/gold"/>
                    <TextView
                        android:id="@+id/right_gold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:textColor="@color/textcolor_2"
                        android:text="500"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/container_left"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp"
            android:layout_alignLeft="@id/normalTitle"
            android:layout_alignBottom="@id/normalTitle"/>
        <RelativeLayout
            android:id="@+id/container_right"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp"
            android:layout_alignBottom="@id/normalTitle"
            android:layout_alignRight="@id/normalTitle"/>

    </RelativeLayout>
</LinearLayout>