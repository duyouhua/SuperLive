<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="295dp"
        android:layout_height="130dp"
        android:layout_centerInParent="true"
        android:background="@color/white">
        <RelativeLayout
            android:id="@+id/rl_close"
            android:layout_width="match_parent"
            android:layout_height="34dp">
            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/close_black"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/ll_guize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/rl_close"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp">
            <View
                android:layout_width="0dp"
                android:layout_height="1px"
                android:background="@color/line_code"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"/>
            <View
                android:layout_width="14dp"
                android:layout_height="1dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您的金币不足,是否立即充值?"
                android:textColor="@color/textcolor_1"
                android:textSize="16sp"
                android:gravity="center"/>
            <View
                android:layout_width="14dp"
                android:layout_height="1dp"/>
            <View
                android:layout_width="0dp"
                android:layout_height="1px"
                android:background="@color/line_code"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/ll_guize">
           <TextView
               android:gravity="center"
               android:layout_marginLeft="36dp"
               android:layout_alignParentLeft="true"
               android:id="@+id/sucess"
               android:text="确定"
               android:textColor="#333333"
               android:layout_width="50dp"
               android:layout_height="30dp" />
            <TextView
                android:textColor="#333333"
                android:gravity="center"
                android:layout_marginRight="36dp"
                android:layout_alignParentRight="true"
                android:id="@+id/cancle"
                android:text="取消"
                android:layout_width="50dp"
                android:layout_height="30dp" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>