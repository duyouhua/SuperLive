<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent"
    android:background="@color/transparent_background">
    <LinearLayout
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        >
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="325dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/retangle_soild_withe_10">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textcolor_2"
            android:textSize="15sp"
            android:layout_marginTop="15dp"
            android:background="@color/transparent_background"
            android:text="热门赛事源汇总"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="230dp">
            <com.joytouch.superlive.widget.PullToRefreshLayout
                android:id="@+id/livesource_prl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="17dp"
                android:background="@color/transparent_background">
                <include layout="@layout/refresh_head"/>
                <com.joytouch.superlive.widget.PullableListView
                    android:id="@+id/livesource"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:listSelector="@color/transparent_background"
                    android:divider="@color/transparent_background"
                    android:dividerHeight="0dp"
                    android:scrollbars="none"/>
                <include layout="@layout/load_more"/>
            </com.joytouch.superlive.widget.PullToRefreshLayout>
            <include
                android:id="@+id/empty"
                layout="@layout/empty"/>
            <include
                android:id="@+id/loading"
                layout="@layout/loading_failed" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:orientation="horizontal"
                android:layout_centerInParent="true">
                <Button
                    android:id="@+id/sure"
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/withe"
                    android:background="@drawable/retangle_main_15"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:text="确定"/>
                <Button
                    android:id="@+id/cancel"
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/withe"
                    android:background="@drawable/retangle_gray"
                    android:layout_marginLeft="23dp"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:text="取消"/>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
    </LinearLayout>
</LinearLayout>