<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:background="@drawable/retangle_soild_withe"
    android:layout_height="330dp">
    <LinearLayout
        android:id="@+id/ll_1"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="130dp">
        <TextView
            android:textColor="#666666"
            android:gravity="center"
            android:text="为了和您尽快联系"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#666666"
            android:gravity="center"
            android:text="请绑定手机号"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_2"
        android:layout_below="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp">
        <EditText
            android:id="@+id/et_phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入手机号"
            android:textSize="15sp"
            android:textColorHint="@color/editext_hint"
            android:paddingLeft="8dp"
            android:inputType="number"
            android:maxLength="11"/>
        <View
            android:layout_width="1dp"
            android:layout_height="24dp"
            android:background="#30000000"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:id="@+id/count_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发送验证码"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/textcolor_1"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_1"
        android:layout_below="@+id/ll_2"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="#30000000"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <EditText
        android:layout_below="@+id/tv_1"
        android:background="#00000000"
        android:id="@+id/et_code"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:hint="请输入验证码"
        android:textSize="15sp"
        android:textColorHint="@color/editext_hint"
        android:paddingLeft="8dp"
        android:inputType="number"
        android:maxLength="6"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"/>
    <TextView
        android:id="@+id/tv_2"
        android:layout_below="@+id/et_code"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="#30000000"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/tv_2"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:gravity="center"
            android:id="@+id/id_positive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/retang_theme"
            >
            <TextView
                android:gravity="center"
                android:id="@+id/textView3"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="50dp"
            android:gravity="center"
            android:id="@+id/id_negtive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/retangle_gray" >
            <TextView
                android:gravity="center"
                android:id="@+id/textView2"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:text="取消"
                android:textColor="@color/white"
                android:textSize="17sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>