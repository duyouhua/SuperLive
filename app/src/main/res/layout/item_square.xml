<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_square"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="@color/titlebar_color">
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="勇士VS快船"
            android:textColor="@color/textcolor_1"
            android:textSize="16sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"/>
        <com.joytouch.superlive.widget.CircleImageView
            android:id="@+id/tv_icon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@color/theme_color"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tv_name"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/tv_anchor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/textcolor_1"
            android:text="砰然心动的人"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tv_icon"
            android:layout_marginTop="10dp"/>
        <LinearLayout
            android:id="@+id/ll_level"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:orientation="horizontal"
            android:layout_marginLeft="4dp"
            android:background="@drawable/level_bg"
            android:paddingRight="4dp"
            android:paddingLeft="2dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/tv_anchor_name"
            android:layout_centerHorizontal="true"
            tools:visibility="visible">
            <ImageView
                android:id="@+id/iv_level_pic"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:background="@drawable/star_withe"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/tv_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/withe"
                android:textSize="8sp"
                android:layout_marginLeft="2dp"
                android:text="10"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17632人"
            android:layout_below="@id/ll_level"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textColor="@color/textcolor_2"
            android:textSize="16sp"/>
    </RelativeLayout>
</LinearLayout>